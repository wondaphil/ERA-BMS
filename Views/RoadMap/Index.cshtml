
@{
    ViewBag.Title = "Road Network Mapping";
}

<h2>Road Network Mapping</h2>
@using (Html.BeginForm())
{
    <div class="panel panel-default">
        <div class="panel-body">

            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6 col-xs-6">
                    <div class="form-horizontal">
                        <div class="form-group form-group">
                            <label class="control-label col-md-3 col-sm-4">District</label>
                            <div class="col-md-8 col-sm-8">
                                @Html.DropDownList("ddlDistrict", new SelectList(ViewBag.Districts, "Value", "Text"), new { @class = "form-control" })
                                <div class="clearfix visible-lg visible-md visible-sm visible-xs"></div> <!-- Add clearfix (or new line break) for only the sm -->
                                <button type="button" class="btn btn-primary glyphicon glyphicon-search" id="searchbydistrict" data-toggle="tooltip" title="Search by District"></button>
                                <a href="" target="_blank" class="btn btn-primary glyphicon glyphicon-map-marker" id="mapbydistrict" data-toggle="tooltip" title="Map by District"></a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-5 col-md-5 col-sm-6 col-xs-6">
                    <div class="form-horizontal">
                        <div class="form-group form-group">
                            <label class="control-label col-md-3 col-sm-4">Section</label>
                            <div class="col-md-8 col-sm-8">
                                <select class="form-control" id="ddlSection">
                                    <!-- Sections list populates here -->
                                </select>
                                <div class="clearfix visible-lg visible-md visible-sm visible-xs"></div> <!-- Add clearfix (or new line break) for only the sm -->
                                <button type="button" class="btn btn-primary glyphicon glyphicon-search" id="searchbysection" data-toggle="tooltip" title="Search by Section"></button>
                                <a href="" target="_blank" class="btn btn-primary glyphicon glyphicon-map-marker" id="mapbysection" data-toggle="tooltip" title="Map by Section"></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="segmentsPartial">
        <!-- Road Segment list displays here -->
    </div>
}

<div id="wait" align="center" style="display: none">
    <img src="~/images/ajax-loader-big.gif" />
</div>

<script>
    $(document).ready(function () {
        $('#mapbydistrict').bind('click', function (e) {e.preventDefault();})
        $('#mapbysection').bind('click', function (e) { e.preventDefault(); });

        $('#ddlDistrict').change(function () {
            var selDistrictId = $('#ddlDistrict option:selected').val();
            $('#ddlSection option').remove(); //empty the section dropdown list
            $('#segmentsPartial').empty(); // clear the segments place holder
            $('#mapbysection').bind('click', function (e) { e.preventDefault(); });

            if (selDistrictId == "0") { //if 'All Districts' is selected
                $('#mapbydistrict').attr("href", "");
                $('#mapbydistrict').bind('click', function (e) { e.preventDefault(); })
            }
            else {
                $.ajax({
                    url: '@Url.Action("_GetSections", "LocationsDDL")',
                    data: { districtid: selDistrictId },
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        // Enable the 'Map by District' button and set its link
                        $('#mapbydistrict').unbind('click');
                        var url = '@Url.Action("_GetRoadsMapByDistrict", "RoadMap", new { id = "disid" })'
                            .replace("disid", encodeURIComponent(selDistrictId));

                        $('#mapbydistrict').attr("href", url);

                        var markup = '<option value="0" id="noselect"> --Select Section --</option>';
                        $.each(data, function (i, section) {
                            markup += '<option value="' + section.Value + '">' + section.Text + '</option>'
                            $('#ddlSection').html(markup);
                        });
                    }
                });
            }
        });

        $('#ddlSection').change(function () {
            var selSectionId = $('#ddlSection option:selected').val();
            $('#segmentsPartial').empty(); // clear the segment place holder
            $('#mapbysection').bind('click', function (e) { e.preventDefault(); });

            if (selSectionId != "0") //if some section is selected
            {
                $.ajax({
                    url: '@Url.Action("_GetSegmentsListBySection", "RoadMap")',
                    data: { sectionid: selSectionId },
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        // Enable the 'Map by Section' button and set its link
                        $('#mapbysection').unbind('click');

                        var url = '@Url.Action("_GetRoadsMapBySection", "RoadMap", new { id = "secid" })'
                            .replace("secid", encodeURIComponent(selSectionId));

                        $('#mapbysection').attr("href", url);

                        $('#segmentsPartial').html(data);
                    }
                });
            }
        });

        $('#searchbydistrict').click(function () {
            var selDistrictId = $('#ddlDistrict option:selected').val();
            $('#segmentsPartial').empty(); // clear the segments place holder

            if (selDistrictId == "0") { //if 'All Districts' is selected
                $.ajax({
                    url: '@Url.Action("_GetSegmentsListAll", "RoadMap")',
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        $('#segmentsPartial').html(data);
                    }
                });
            }
            else {

                $.ajax({
                    url: '@Url.Action("_GetSegmentsListByDistrict", "RoadMap")',
                    data: { districtid: selDistrictId },
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        $('#segmentsPartial').html(data);
                    }
                });
            }
        });

        $('#searchbysection').click(function () {
            var selSectionId = $('#ddlSection option:selected').val();
            if (selSectionId != "0" && typeof selSectionId != 'undefined') //if some section is selected
            {
                $('#ddlSection').trigger('change');
            }
        });
    });

</script>

