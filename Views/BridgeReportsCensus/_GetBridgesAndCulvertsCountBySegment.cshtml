@model IEnumerable<ERA_BMS.ViewModels.BridgeCulvertDistrictSectionSegmentViewModel>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">Bridges and Culverts Count By <b>Road Segment</b> in District <b>@ViewBag.DistrictName</b> and Section <b>@ViewBag.SectionName</b></h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-responsive table-bordered display compact hover" id="bridgescountbysegment">
            <thead>
                <tr>
                    <th>Segment No</th>
                    <th>Segment Name</th>
                    <th>No. of Bridges</th>
                    <th>No. of Culverts</th>
                </tr>
            </thead>
            <tbody>
                @{ int totalBridges = 0;
                    int totalCulverts = 0;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Segments.SegmentNo</td>
                        <td>@item.Segments.SegmentName</td>
                        <td>@item.BridgeCount</td>
                        <td>@item.CulvertCount</td>
                    </tr>
                    totalBridges += item.BridgeCount;
                    totalCulverts += item.CulvertCount;
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">District: <b>@ViewBag.DistrictName</b> | Section: <b>@ViewBag.SectionName</b> | No. of Segments: <b>@Model.Count()</b> | Total Bridges: <b>@totalBridges</b> | Total Culverts: <b>@totalCulverts</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#bridgescountbysegment').dataTable({
            paging: false,
            bLengthChange: true,
            scrollY: 400,
            
            searching: true,
            select: true,
            dom: 'lBfrtip',
            //buttons: ['copy', 'excel', 'pdf', 'print']
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        }).columnFilter({
            "aoColumns": [
                { "type": "number-range" },
                { "type": "text" },
                { "type": "select" },
                { "type": "date-range" }
            ]
        });
    });
</script>


