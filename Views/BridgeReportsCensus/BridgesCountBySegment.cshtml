
@{
    ViewBag.Title = "Bridges Count By Segment";
}

<h2>Bridges Count By Segment</h2>

@using (Html.BeginForm())
{
    <div class="panel panel-default">
        @*<div class="panel-heading">
            <h3 class="panel-title panel-info">Please select district from the dropdown list</h3>
        </div>*@
        <div class="panel-body">

            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="col-sm-12">
                    <div class="form-group form-group-sm">
                        <label class="control-label col-md-2">District</label>
                        <div class="col-md-5">
                            @Html.DropDownList("ddlDistrict", (List<SelectListItem>)ViewBag.Districts, new { @class = "form-control" })
                            <!--<label class="control-label" id="distrIdDIV">--> <!-- District id appears here --> <!--</label>-->
                        </div>

                    </div>
                </div>
            </div>

            <div class="form-horizontal">
                <div class="form-group form-group-sm">
                    <label class="control-label col-md-2">Section</label>
                    <div class="col-md-5">
                        <select class="form-control" id="ddlSection">
                            <!-- Sections list populates here -->
                        </select>
                        <!--<label class="control-label" id="secIdDIV">--> <!-- Section id appears here --> <!--</label>-->
                    </div>
                </div>
            </div>

        </div>
        <div id="sectionsPartial">
            <!-- Sections list displays here -->
        </div>
    </div>

}

<div id="wait" align="center" style="display: none">
    <img src="~/images/ajax-loader-big.gif" />
</div>

<script>
    $(document).ready(function () {
        $('#ddlDistrict').change(function () {
            var selDistrictId = $('#ddlDistrict option:selected').val();
            $('#sectionsPartial').empty(); //clear the sections place holder
            $('#distrIdDIV').text(selDistrictId); //clear district no. indicator

            if (selDistrictId != "0") //if some district is selected
            {
                $('#distrIdDIV').text("District No. = " + selDistrictId);

                $.ajax({
                    url: '@Url.Action("_GetBridgesCountBySection", "BridgeReportsCensus")', //url: 'Sections/_GetSections',
                    data: { districtid: selDistrictId },
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        $('#sectionsPartial').html(data);
                    }
                });
            }
        });
    });
</script>
