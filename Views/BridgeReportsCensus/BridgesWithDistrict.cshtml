@model IEnumerable<ERA_BMS.ViewModels.BSSDViewModel>

@{
    ViewBag.Title = "Bridges with District/Section/Segment";
}

<h2>Bridges with District/Section/Segment</h2>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">List of Bridges with District, Section and Segment</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-responsive display compact hover" id="bridgesbydistrict">
            <thead>
                <tr>
                    <th>Bridge Id</th>
                    <th>Bridge Name</th>
                    <th>Segment</th>
                    <th>Section</th>
                    <th>District</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.bridges.BridgeNo</td>
                        <td>@item.bridges.BridgeName</td>
                        <td>@item.segments.SegmentName</td>
                        <td>@item.sections.SectionName</td>
                        <td>@item.districts.DistrictName</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of Bridges: <b>@Model.Count()</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#bridgesbydistrict').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            
            searching: true,
            select: true,
            dom: 'lBfrtip',
            //buttons: ['copy', 'excel', 'pdf', 'print']
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        }).columnFilter({
            "aoColumns": [
                { "type": "number-range" },
                { "type": "text" },
                { "type": "select" },
                { "type": "date-range" }
            ]
        });
    });
</script>
