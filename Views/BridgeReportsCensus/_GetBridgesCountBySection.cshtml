@model IEnumerable<ERA_BMS.ViewModels.BridgeSectionViewModel>

@{
    ViewBag.Title = "Bridge Count By Section";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">Bridge Count By Section</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-responsive table-bordered display compact hover" id="bridgescountbysection">
            <thead>
                <tr>
                    <th>Section Id</th>
                    <th>Section Name</th>
                    <th>No. of Bridges</th>
                </tr>
            </thead>
            <tbody>
                @{int totalCount = 0; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Sections.SectionId</td>
                        <td>@item.Sections.SectionName</td>
                        <td>@item.BridgeCount</td>
                    </tr>
                    totalCount += item.BridgeCount;
                 }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">District: <b>@ViewBag.DistrictName</b> | No. of Sections: <b>@Model.Count()</b> | No. of Bridges: <b>@totalCount</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#bridgescountbysection').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            
            searching: true,
            select: true,
            dom: 'lBfrtip',
            //buttons: ['copy', 'excel', 'pdf', 'print']
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        });
    });
</script>
