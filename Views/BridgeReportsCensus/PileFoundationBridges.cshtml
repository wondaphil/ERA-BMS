@model IEnumerable<ERA_BMS.ViewModels.BridgeFoundationViewModel>

@{
    ViewBag.Title = "Pile Foundation Bridges";
}

<h2>Pile Foundation Bridges</h2>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">Bridges with Pile Foundation Types (District: <b>All</b>)</h3>        
    </div>

    <div class="panel-body">
        <div align="right" style="padding-right: 10px">
            <a href="@Url.Action("PileFoundationBridgesMap", "BridgeLocation")" class="btn btn-primary" target="_blank"><span class="glyphicon glyphicon-map-marker"></span> Show on Map</a>
        </div>
        <br />
        @*<br />*@
        <table class="table table-striped table-condensed table-responsive table-bordered display compact hover" id="tblbridgedamgebymainparts">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Bridges.BridgeNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bridges.BridgeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bridges.Segment.Section.District.DistrictNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bridges.Segment.Section.District.DistrictName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bridges.Segment.Section.SectionName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bridges.Segment.SegmentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bridges.BridgeGeneralInfo.BridgeLength)
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.bridges.BridgeGeneralInfo.ConstructionYear)*@
                        Constr./ Replaced Year
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bridges.SuperStructure.BridgeType.BridgeTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Foundation.FoundationTypeName)
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridges.BridgeNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridges.BridgeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridges.Segment.Section.District.DistrictNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridges.Segment.Section.District.DistrictName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridges.Segment.Section.SectionName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridges.Segment.SegmentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridges.BridgeGeneralInfo.BridgeLength)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridges.BridgeGeneralInfo.ReplacedYear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridges.SuperStructure.BridgeType.BridgeTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Foundation.FoundationTypeName)
                        </td>
                        <td align="center">
                            <a href="@Url.Action("Index", "BridgeInventory", new { id = item.Bridges.BridgeId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Inventory" style="font-size: 14px"></a>
                        </td>
                        <td align="center">
                            <a href="@Url.Action("Index", "BridgeProfile", new { id = item.Bridges.BridgeId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Profile" style="font-size: 14px"></a>
                        </td>
                        <td align="center">
                            <a href="@Url.Action("Index", "DamageInspMajor", new { id = item.Bridges.BridgeId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Inspection" style="font-size: 14px"></a>
                        </td>
                        <td align="center">
                            <a href="@Url.Action("BridgeMap", "BridgeLocation", new { id = item.Bridges.BridgeId })" target="_blank" class="glyphicon glyphicon-map-marker" data-toggle="tooltip" title="Go to Map" style="font-size: large"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of Bridges with Pile Foundation: <b>@Model.Count()</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        var dt = $('#tblbridgedamgebymainparts').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            
            searching: true,
            select: true,
            dom: 'lBfrtip',
            order: [[2, "asc"], [4, "asc"], [5, "asc"], [0, "asc"]], // order by District (3rd column), then by Section (4th column), then by Segment (5th column) and finally by bridge (1st column)
            //columnDefs: [{ target: 1, visible: false }],
            aoColumnDefs: [{ aTargets: [2], bVisible: false }],
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        });

        //hide the first column
        //dt.column(0).visible(false);

    });
</script>

