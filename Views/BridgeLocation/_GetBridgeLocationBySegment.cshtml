    <h3><a href="@Url.Action("MapBySegment", "BridgeLocation", new { id = ViewBag.SegmentId })" target="_blank" class="glyphicon glyphicon-map-marker" data-toggle="tooltip" title="Map by Road Segment" align="right">Map by Segment</a></h3>
</div>*@
<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-10">
                <h3 class="panel-title panel-info"> Location Information of Bridges (Road Segment: <b>@ViewBag.SegmentName</b>, Section: <b>@ViewBag.SectionName</b>, District: <b>@ViewBag.DistrictName</b>)</h3>
            </div>
            
        </div>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-responsive table-bordered display compact hover" id="bridges">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RevisedBridgeNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BridgeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BridgeGeneralInfo.KMFromAddis)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BridgeGeneralInfo.XCoord)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BridgeGeneralInfo.YCoord)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BridgeGeneralInfo.UtmZoneEthiopia.UtmZone)
                    </th>
                    <th>
                        Latitude (Decimal)
                    </th>
                    <th>
                        Longitude (Decimal)
                    </th>
                    <th>
                        Latitude (DMS)
                    </th>
                    <th>
                        Longitude (DMS)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.OrderBy(s => s.RevisedBridgeNo))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RevisedBridgeNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BridgeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BridgeGeneralInfo.KMFromAddis)
                        </td>
                        
                        @if (item.BridgeGeneralInfo == null)
                        {
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td align="center"><a href="@Url.Action("Index", "BridgeInventory", new { id = item.BridgeId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Inventory" style="font-size: 14px"></a></td>
                            <td></td>
                            continue;
                        }

                        @if (item.BridgeGeneralInfo.XCoord != null)
                        {
                            <td>@item.BridgeGeneralInfo.XCoord.Value.ToString("#.000")</td>
                        }
                        else
                        {
                            <td></td>
                        }

                        @if (item.BridgeGeneralInfo.YCoord != null)
                        {
                            <td>@item.BridgeGeneralInfo.YCoord.Value.ToString("#.000")</td>
                        }
                        else
                        {
                            <td></td>
                        }
                            
                        <td>
                            @Html.DisplayFor(modelItem => item.BridgeGeneralInfo.UtmZoneEthiopia.UtmZone)
                        </td>
                        <td>
                            @item.BridgeGeneralInfo.LatitudeDecimal
                        </td>
                        <td>
                            @item.BridgeGeneralInfo.LongitudeDecimal
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BridgeGeneralInfo.LatitudeDMS)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BridgeGeneralInfo.LongitudeDMS)
                        </td>
                        <td align="center">
                            <a href="@Url.Action("Index", "BridgeInventory", new { id = item.BridgeId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Inventory" style="font-size: 14px"></a>
                        </td>
                        <td align="center">
                            <a href="@Url.Action("BridgeMap", "BridgeLocation", new { id = item.BridgeId })" target="_blank" class="glyphicon glyphicon-map-marker" data-toggle="tooltip" title="Go to Map" style="font-size: large"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of Bridges: <b>@Model.Count()</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {


        $('#bridges').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            scrollX: true,
            searching: true,
            select: true,
            dom: 'lBfrtip',
            //buttons: ['copy', 'excel', 'pdf', 'print']
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        });
    });
</script>

