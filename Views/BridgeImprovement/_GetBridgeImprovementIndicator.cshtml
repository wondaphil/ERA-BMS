@model IEnumerable<ERA_BMS.Models.BridgeImprovement>
<script src="~/Scripts/jquery.dataTables.js"></script>

<table class="table table-striped table-condensed table-responsive display compact hover" id="tblbrgimprindicator">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImprovementYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImprovementDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contractor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supervisor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImprovementAction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImprovementCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bridge.BridgeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImprovementType.ImprovementTypeName)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ImprovementYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImprovementDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contractor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supervisor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImprovementAction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImprovementCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remark)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bridge.BridgeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImprovementType.ImprovementTypeName)
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#tblbrgimprindicator').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            searching: true,
            select: true,
            dom: 'lBfrtip',
            //buttons: ['copy', 'excel', 'pdf', 'print']
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        });
    });
</script>


