@model IEnumerable<ERA_BMS.Models.BridgeImprovement>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">Bridge <b>@ViewBag.ImprovementType</b> History in years <b>@ViewBag.StartImprovementYear - @ViewBag.EndImprovementYear</b> (District: <b>ALL</b>)</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-responsive table-bordered display compact hover" id="tblbrgimprindicator">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Bridge.RevisedBridgeNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bridge.BridgeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bridge.Segment.Section.District.DistrictName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bridge.Segment.Section.SectionName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bridge.Segment.SegmentName)
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.Bridge.BridgeGeneralInfo.ConstructionYear)*@
                        Orig. Cons. Yr.
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.Bridge.BridgeGeneralInfo.ReplacedYear)*@
                        Repl. Yr.
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.ImprovementType.ImprovementTypeName)*@
                        Improv. Action
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImprovementYear)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contractor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Supervisor)
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.ImprovementCost)*@
                        Estimated Repair Cost, ETB
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImprovementAction)
                    </th>
                </tr>
            </thead>

            <tbody>
                @{ double totalCost = 0.0; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridge.RevisedBridgeNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridge.BridgeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridge.Segment.Section.District.DistrictName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridge.Segment.Section.SectionName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridge.Segment.SegmentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridge.BridgeGeneralInfo.ConstructionYear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridge.BridgeGeneralInfo.ReplacedYear)
                        </td>
                        @{
                            string bg = "";
                            string fore = "";
                            if (item.ImprovementType.ImprovementTypeId == 2)
                            {
                                bg = "red";
                                fore = "white";
                            }
                        }
                        <td style="background-color: @bg; color: @fore">
                            @Html.DisplayFor(modelItem => item.ImprovementType.ImprovementTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImprovementYear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contractor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Supervisor)
                        </td>
                        <td>
                            @item.ImprovementCost.Value.ToString("#,0.00")
                            @{ totalCost += (double)@item.ImprovementCost;}
                        </td>
                        <td class="shortentext">
                            @Html.DisplayFor(modelItem => item.ImprovementAction)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of <b>@ViewBag.ImprovementType</b> works for <b>ALL</b> Districts in @ViewBag.ImprovementYear: <b>@Model.Count()</b> | Total Improvement Cost: <b>@totalCost.ToString("#,0.00")</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        
        $('#tblbrgimprindicator').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            scrollX: true,
            searching: true,
            select: true,
            dom: 'lBfrtip',
            //buttons: ['copy', 'excel', 'pdf', 'print']
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        });
    });
</script>


