@model IEnumerable<ERA_BMS.ViewModels.BridgeServiceConditionViewModel>
@using System.ComponentModel.DataAnnotations

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">Bridge Improvement Cost (District: <b>@ViewBag.District</b>, Section: <b>@ViewBag.Section</b>, Road Segment: <b>@ViewBag.Segment</b>)</h3>
    </div>

    <div class="panel-body">
        <br />
        <br />
        <table class="table table-striped table-condensed table-responsive table-bordered display compact hover" id="tblbridgeimprovementcost">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.bridges.RevisedBridgeNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.bridges.BridgeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.bridges.BridgeGeneralInfo.KMFromAddis)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.bridges.BridgeGeneralInfo.BridgeLength)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.bridges.SuperStructure.BridgeType.BridgeTypeName)
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.repairCost)*@
                        Estimated Repair Cost, ETB
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.bridges.RevisedBridgeNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.bridges.BridgeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.bridges.BridgeGeneralInfo.KMFromAddis)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.bridges.BridgeGeneralInfo.BridgeLength)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.bridges.SuperStructure.BridgeType.BridgeTypeName)
                        </td>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.repairCost.ToString())*@
                            @item.totalRepairCost.ToString("#,0.00")
                        </td>
                        <td align="center">
                            <a href="@Url.Action("Index", "BridgeProfile", new { id = item.bridges.BridgeId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Profile" style="font-size: 14px"></a>
                        </td>
                        <td align="center">
                            <a href="@Url.Action("Index", "DamageInspMajor", new { id = item.bridges.BridgeId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Inspection" style="font-size: 14px"></a>
                        </td>
                        <td>
                            <a href="@Url.Action("BridgeMap", "BridgeLocation", new { id = item.bridges.BridgeId, val = ViewBag.InspectionYear })" target="_blank" class="glyphicon glyphicon-map-marker" data-toggle="tooltip" title="Go to Map" style="font-size: 14px"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Road Segment: <b>@ViewBag.Segment</b> | Total No. of Bridges: <b>@Model.Count()</b> | Total Improvement Cost (ETB): <b>@Model.Sum(s => s.totalRepairCost).ToString("#,0.00")</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#tblbridgeimprovementcost').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            searching: true,
            select: true,
            dom: 'lBfrtip',
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        });
    });
</script>

