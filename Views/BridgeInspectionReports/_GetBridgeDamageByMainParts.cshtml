@model IEnumerable<ERA_BMS.ViewModels.BridgeDamageConditionViewModel>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">Bridge Damage by Main Parts (District: <b>@ViewBag.District</b>, Section: <b>@ViewBag.Section</b>, Segment: <b>@ViewBag.Segment</b>, Inspection Year: <b>@ViewBag.InspectionYear</b>)</h3>
    </div>

    <div class="panel-body">
        <br />
        <br />
        <table class="table table-striped table-condensed table-responsive display compact hover" id="tblbridgedamgebymainparts">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.bridges.BridgeId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.bridges.BridgeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.resultInspMajor.DmgPercSubStructure)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.resultInspMajor.DmgPercSuperStructure)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.resultInspMajor.DmgPercAncilaries)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.resultInspMajor.DmgPerc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.condition.DamageConditionName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.condition.Action)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.resultInspMajor.RepairCostSubStruct)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.resultInspMajor.RepairCostSuperStruct)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.resultInspMajor.RepairCostAncilaries)
                    </th>
                    <th>
                        Cost Total
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.bridges.BridgeId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.bridges.BridgeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.resultInspMajor.DmgPercSubStructure)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.resultInspMajor.DmgPercSuperStructure)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.resultInspMajor.DmgPercAncilaries)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.resultInspMajor.DmgPerc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.condition.DamageConditionName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.condition.Action)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.resultInspMajor.RepairCostSubStruct)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.resultInspMajor.RepairCostSuperStruct)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.resultInspMajor.RepairCostAncilaries)
                        </td>
                        <td>
                            @{ 
                                double totalCost = (double)(item.resultInspMajor.RepairCostSubStruct + item.resultInspMajor.RepairCostSuperStruct + item.resultInspMajor.RepairCostAncilaries);
                            }
                            @totalCost.ToString("#,0.00")
                        </td>
                    </tr>
                                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of Bridges: <strong>@Model.Count()</strong></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();

        $('#tblbridgedamgebymainparts').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            searching: true,
            select: true,
            dom: 'lBfrtip',
            //buttons: ['copy', 'excel', 'pdf', 'print']
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        });
    });
</script>