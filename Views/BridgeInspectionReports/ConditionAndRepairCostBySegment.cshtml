
@{
    ViewBag.Title = "Bridge Condition & Repair Cost By Segment";
}

<h2>Bridge Condition & Repair Cost By Segment</h2>

@using (Html.BeginForm())
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title panel-info">Please select <b>Inspection Year</b>, <b>District</b> and <b>Section</b> from the dropdown list</h3>
        </div>
        <div class="panel-body">

            @Html.AntiForgeryToken()



            <div class="row">
                <div class="col-md-5">
                    <div class="form-horizontal">
                        <div class="form-group form-group-sm">
                            <label for="ddlInspectionYear" class="control-label col-md-4">Inspection Year</label>
                            @Html.DropDownList("ddlInspectionYear", (List<SelectListItem>)ViewBag.InspectionYear, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-horizontal">
                        <div class="form-group form-group-sm">
                            <label for="ddlDistrict" class="control-label col-md-2">District</label>
                            <div class="col-md-8">
                                @Html.DropDownList("ddlDistrict", (List<SelectListItem>)ViewBag.Districts, new { @class = "form-control" })
                                <label class="control-label" id="distrIdDIV"> <!-- District id appears here --> </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-horizontal">
                        <div class="form-group form-group-sm">
                            <label for="ddlSection" class="control-label col-md-2">Section</label>
                            <div class="col-md-8">
                                <select class="form-control" id="ddlSection">
                                    <!-- Sections list populates here -->
                                </select>
                                <label class="control-label" id="secIdDIV"> <!-- Section id appears here --> </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row form-group form-group-sm">

                    <div class="col-sm-1 navbar-right">
                        <a href="javascript:$('#ddlBridge').trigger('change')" class="btn btn-primary" data-toggle="tooltip" title="Refresh" id="refresh"> <span class="glyphicon glyphicon-refresh"></span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="bridgeconditionandrepaircost">
        <!-- Bridge condition and repair cost display here -->
    </div>
}

<div id="wait" align="center" style="display: none">
    <img src="~/images/ajax-loader-big.gif" />
</div>

<script>
    $(document).ready(function () {
        $('#ddlDistrict').change(function () {
            var selDistrictId = $('#ddlDistrict option:selected').val();
            $('#distrIdDIV').text(""); //clear district no. indicator
            $('#ddlSection option').remove(); //empty the section dropdown list
            $('#secIdDIV').text(""); //clear section no. indicator

            if (selDistrictId != "0") // some district is selected
            {
                $('#distrIdDIV').text("District Id = " + selDistrictId );
                $.ajax({
                    url: '@Url.Action("_GetSections", "LocationsDDL")',
                    data: { districtid: selDistrictId },
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        var markup = '<option value="0" id="noselect"> --Select Section --</option>';
                        $.each(data, function (i, section) {
                            markup += '<option value="' + section.Value + '">' + section.Text + '</option>'
                            $('#ddlSection').html(markup);
                        });
                    }
                });
            }
        });

        $('#ddlSection').change(function () {
            var selDistrictId = $('#ddlDistrict option:selected').val();
            var selSectionId = $('#ddlSection option:selected').val();
            var selInspectionYear = $('#ddlInspectionYear option:selected').val();
            $('#bridgeconditionandrepaircost').empty(); // clear the bridge condition and repair cost placeholder

            if (selSectionId != "0") // Some section is selected
            {
                $('#secIdDIV').text("Section Id = " + selSectionId );
                $.ajax({
                    url: '@Url.Action("_GetConditionAndRepairCostBySegment", "BridgeReportsInspection")',
                    data: { districtid: selDistrictId, sectionid: selSectionId, inspectionyear: selInspectionYear },
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        $('#bridgeconditionandrepaircost').html(data);
                    }
                });
            }
        });

        $('#ddlInspectionYear').change(function () {
            var selInspectionYr = $('#ddlInspectionYear option:selected').val();
            if (selInspectionYr == "0") //if no inspection year is selected
            {
                $('#ddlDistrict').val("0");
                $('#distrIdDIV').text(""); //clear district no. indicator
                $('#ddlSection option').remove(); //empty the section dropdown list
                $('#secIdDIV').text(""); //clear section no. indicator
                $('#bridgeconditionandrepaircost').empty(); // clear the bridge condition and repair cost placeholder
            }
            else {
                if ($('#ddlSection').has('option').length > 0) {
                    $('#ddlSection').trigger('change');
                }
            }
        });

        $('#refresh').click(function () {
            $('#ddlSection').trigger('change');
        });
    });
</script>

