@model IEnumerable<ERA_BMS.ViewModels.BridgeServiceConditionViewModel>
@using System.ComponentModel.DataAnnotations

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">Bridge Improvement Priority (District: <b>@ViewBag.District</b>, Section: <b>@ViewBag.Section</b>, Inspection Year: <b>@ViewBag.InspectionYear</b>)</h3>
    </div>

    <div class="panel-body">
        <br />
        <br />
        <table class="table table-striped table-condensed table-responsive table-bordered display compact hover" id="tblbridgedamagecondition">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.bridges.BridgeNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.bridges.BridgeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.bridges.Segment.SegmentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.bridges.BridgeGeneralInfo.KMFromAddis)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.bridges.BridgeGeneralInfo.BridgeLength)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.bridges.SuperStructure.BridgeType.BridgeTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.resultInspMajor.DmgPerc)
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.repairCost)*@
                        Repair Cost
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.bridges.BridgeNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.bridges.BridgeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.bridges.Segment.SegmentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.bridges.BridgeGeneralInfo.KMFromAddis)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.bridges.BridgeGeneralInfo.BridgeLength)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.bridges.SuperStructure.BridgeType.BridgeTypeName)
                        </td>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.resultInspMajor.DmgPerc)*@
                            @*@item.resultInspMajor.DmgPerc.Value.ToString("0.00")*@
                            @item.resultInspMajor.DmgPerc.Value.ToString("0.00")
                        </td>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.repairCost.ToString())*@
                            @item.totalRepairCost.ToString("#,0.00")
                        </td>
                        <td align="center">
                            <a href="@Url.Action("BridgeDamageImages", "ImageGallery", new { id = item.bridges.BridgeId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="View Damage Images" style="font-size: 14px"></a>
                        </td>
                        <td>
                            <a href="@Url.Action("Index", "DamageInspMajor", new { id = item.bridges.BridgeId, val = ViewBag.InspectionYear })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle = "tooltip" title = "Go to Inspection" style="font-size: 14px"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of Bridges: <b>@Model.Count()</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#tblbridgedamagecondition').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            
            searching: true,
            select: true,
            dom: 'lBfrtip',
            order: [[6, "des"]], // order by Damage % in descending order
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        });
    });
</script>

