            //var selReportTypeId = $('#ddlReportType option:selected').val();

            //// Update the reports that require segment
            //if (selReportTypeId == "1" || selReportTypeId == "3" || selReportTypeId == "4" || selReportTypeId == "5") {
            //    $('#ddlReportType').trigger('change');
            //}
            //else if (selReportTypeId == "10" || selReportTypeId == "11" || selReportTypeId == "12") {
            //    $('#bridgeReportPartial').empty(); // clear the bridge condition place holder
            //}
        });

        $('#ddlBridge').change(function () {
            var selBridgeId = $('#ddlBridge option:selected').val();
            $('#brgIdDIV').text(""); //clear bridge no. indicator

            if (selBridgeId != "0") //if some bridge is selected
            {
                var bridgeNo = $('#ddlBridge option:selected').text().split('[').pop().split(']')[0]; // extract the bridge no
                $('#brgIdDIV').text("Bridge No = " + bridgeNo);
            }

            //var selReportTypeId = $('#ddlReportType option:selected').val();

            //// Update the reports that require bridge
            //if (selReportTypeId == "10" || selReportTypeId == "11" || selReportTypeId == "12") {
            //    $('#ddlReportType').trigger('change');
            //}
        });

        $('#ddlDistrict').click(function () {
            $('#ddlDistrict').trigger('change');
        });

        $('#ddlSection').click(function () {
            $('#ddlSection').trigger('change');
        });

        $('#ddlSegment').click(function () {
            $('#ddlSegment').trigger('change');
        });

        $('#ddlBridge').click(function () {
            $('#ddlBridge').trigger('change');
        });

        function SelectedLevel() {
            var selDistrictId = $('#ddlDistrict option:selected').val();
            var selSectionId = $('#ddlSection option:selected').val();
            var selSegmentId = $('#ddlSegment option:selected').val();
            var selBridgeId = $('#ddlBridge option:selected').val();

            //$('#bridgeReportPartial').empty(); //clear the bridge report place holder

            if (typeof selBridgeId != 'undefined')
                return "Bridge";
            else {
                if (typeof selSegmentId != 'undefined')
                    return "Segment";
                else {
                    if (typeof selSectionId != 'undefined')
                        return "Section";
                    else {
                        if (typeof selDistrictId != 'undefined')
                            if (selDistrictId == "0")
                                return "All";
                            else
                                return "District";
                        else
                            return "none";
                    }
                }
            }

        }

