                                dataType: 'html',
                                beforeSend: function () { $('#wait').show(); },
                                complete: function () { $('#wait').hide(); },
                                success: function (data) {
                                    $('#bridgeReportPartial').html(data);
                                }
                            });
                        }
                        else if (SelectedLevel() == "District") {
                            $.ajax({
                                url: '@Url.Action("_GetBridgeDamageConditionByDistrict", "BridgeInspectionReports")',
                                data: { districtid: selDistrictId, inspectionyear: selInspectionYear },
                                type: 'GET',
                                dataType: 'html',
                                beforeSend: function () { $('#wait').show(); },
                                complete: function () { $('#wait').hide(); },
                                success: function (data) {
                                    $('#bridgeReportPartial').html(data);
                                }
                            });
                        }
                        else if (SelectedLevel() == "All") {
                            $.ajax({
                                url: '@Url.Action("_GetBridgeDamageCondition", "BridgeInspectionReports")',
                                data: { inspectionyear: selInspectionYear },
                                type: 'GET',
                                dataType: 'html',
                                beforeSend: function () { $('#wait').show(); },
                                complete: function () { $('#wait').hide(); },
                                success: function (data) {
                                    $('#bridgeReportPartial').html(data);
                                }
                            });
                        }

                        break;

                    case "3":
                        if (SelectedLevel() == "Segment" || SelectedLevel() == "Bridge" ) {
                            $.ajax({
                                url: '@Url.Action("_GetRecommendationsAndCommentsBySegment", "BridgeInspectionReports")',
                                data: { segmentid: selSegmentId, inspectionyear: selInspectionYear },
                                type: 'GET',
                                dataType: 'html',
                                beforeSend: function () { $('#wait').show(); },
                                complete: function () { $('#wait').hide(); },
