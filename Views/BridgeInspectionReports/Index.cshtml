                                type: 'GET',
                                dataType: 'html',
                                beforeSend: function () { $('#wait').show(); },
                                complete: function () { $('#wait').hide(); },
                                success: function (data) {
                                    $('#bridgeReportPartial').html(data);
                                }
                            });
                        }
                        else if (SelectedLevel() == "Section" ) {
                            $.ajax({
                                url: '@Url.Action("_GetBridgeMainPartsDamageConditionBySection", "BridgeInspectionReports")',
