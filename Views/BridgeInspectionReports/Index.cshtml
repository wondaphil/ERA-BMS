                            $.ajax({
                                url: '@Url.Action("_GetBridgeImprovementIndicator", "BridgeInspectionReports")',
                                type: 'GET',
                                dataType: 'html',
                                beforeSend: function () { $('#wait').show(); },
                                complete: function () { $('#wait').hide(); },
                                success: function (data) {
                                    $('#bridgeReportPartial').html(data);
                                }
                            });
                        }
                        break;

                    case "6":
                        $.ajax({
                            url: '@Url.Action("_GetPrevalentDamageType", "BridgeInspectionReports")',
                            data: { inspectionyear: selInspectionYear },
                            type: 'GET',
                            dataType: 'html',
                            beforeSend: function () { $('#wait').show(); },
                            complete: function () { $('#wait').hide(); },
                            success: function (data) {
                                $('#bridgeReportPartial').html(data);
                            }
                        });
                        break;

                    case "7":
                        if (SelectedLevel() == "Section" || SelectedLevel() == "Segment" || SelectedLevel() == "Bridge") {
                            $.ajax({
                                url: '@Url.Action("_GetConditionAndRepairCostSummaryBySection", "BridgeInspectionReports")',
                                data: { sectionid: selSectionId, inspectionyear: selInspectionYear },
