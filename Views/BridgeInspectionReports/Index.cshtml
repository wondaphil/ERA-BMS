                                beforeSend: function () { $('#wait').show(); },
                                complete: function () { $('#wait').hide(); },
                                success: function (data) {
                                    $('#bridgeReportPartial').html(data);
                                }
                            });
                        }
                        else if (SelectedLevel() == "Section" ) {
                            $.ajax({
                                url: '@Url.Action("_GetBridgeImprovementPriorityBySection", "BridgeInspectionReports")',
                                data: { sectionid: selSectionId, inspectionyear: selInspectionYear },
                                type: 'GET',
                                dataType: 'html',
                                beforeSend: function () { $('#wait').show(); },
                                complete: function () { $('#wait').hide(); },
                                success: function (data) {
                                    $('#bridgeReportPartial').html(data);
                                }
                            });
                        }
                        else if (SelectedLevel() == "District") {
                            $.ajax({
                                url: '@Url.Action("_GetBridgeImprovementPriorityByDistrict", "BridgeInspectionReports")',
                                data: { districtid: selDistrictId, inspectionyear: selInspectionYear },
                                type: 'GET',
                                dataType: 'html',
                                beforeSend: function () { $('#wait').show(); },
                                complete: function () { $('#wait').hide(); },
                                success: function (data) {
