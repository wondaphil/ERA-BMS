                                success: function (data) {
                                    $('#bridgeReportPartial').html(data);
                                }
                            });
                        }
                        break;

                    case "5":
                        if (SelectedLevel() == "Segment" || SelectedLevel() == "Bridge") {
                            $.ajax({
                                url: '@Url.Action("_GetBridgeImprovementIndicatorBySegment", "BridgeInspectionReports")',
                                data: { segmentid: selSegmentId  },
