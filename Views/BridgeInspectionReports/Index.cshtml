                                }
                            });
                        }

                        break;

                    case "2":
                        if (SelectedLevel() == "Segment" || SelectedLevel() == "Bridge") {
                            $.ajax({
                                url: '@Url.Action("_GetBridgeDamageConditionBySegment", "BridgeInspectionReports")',
