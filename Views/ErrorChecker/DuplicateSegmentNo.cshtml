<table class="table table-striped table-condensed table-responsive table-bordered display compact hover" id="tblDuplicateSegmentNo">
    <tr>
        <th>
            Ser. No.
        </th>
        <th>
            Road Id
        </th>
        <th>
            Segment Name
        </th>
        <th>
            Section
        </th>
        <th></th>
    </tr>

    @foreach (var duplcateSegment in ViewBag.DuplicatesList)
    {

        foreach (var Segment in duplcateSegment)
        {
            <tr>
                <td>
                    @Segment.SegmentId
                </td>
                <td>
                    @Segment.SegmentNo
                </td>
                <td>
                    @Segment.SegmentName
                </td>
                <td>
                    @Segment.Section.SectionName
                </td>
                <td align="center">
                    <a href="@Url.Action("Edit", "Segment", new { id = Segment.SegmentId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Edit" style="font-size: 14px"></a>
                </td>
            </tr>
        }
        <tr style="background-color: lightgray">
            <td colspan="5"></td>
        </tr>
    }
</table>