<table class="table table-striped table-condensed table-responsive table-bordered display compact hover" id="tblDuplicateBridgeNo">
    <tr>
        <th>
            Bridge Id
        </th>
        <th>
            Bridge No
        </th>
        <th>
            Bridge Name
        </th>
        <th>
            District
        </th>
        <th>
            Section`
        </th>
        <th>
            Segment
        </th>
        <th>
            Main Route
        </th>
        <th>
            Sub Route
        </th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var duplcateBridge in ViewBag.DuplicatesList)
    {

        foreach (var bridge in duplcateBridge)
        {
            <tr>
                <td>
                    @bridge.BridgeId
                </td>
                <td>
                    @bridge.BridgeNo
                </td>
                <td>
                    @bridge.BridgeName
                </td>
                <td>
                    @bridge.Segment.Section.District.DistrictName
                </td>
                <td>
                    @bridge.Segment.Section.SectionName
                </td>
                <td>
                    @bridge.Segment.SegmentName
                </td>
                <td>
                    @bridge.SubRoute.MainRoute.MainRouteNo - @bridge.SubRoute.MainRoute.MainRouteName
                </td>
                <td>
                    @bridge.SubRoute.SubRouteNo - @bridge.SubRoute.SubRouteName
                </td>
                <td align="center">
                    <a href="@Url.Action("Edit", "Bridges", new { id = bridge.BridgeId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Edit" style="font-size: 14px"></a>
                </td>
                <td align="center">
                    <a href="@Url.Action("Index", "BridgeInventory", new { id = bridge.BridgeId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Inventory" style="font-size: 14px"></a>
                </td>
                <td align="center">
                    <a href="@Url.Action("Index", "BridgeProfile", new { id = bridge.BridgeId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Profile" style="font-size: 14px"></a>
                </td>
                <td align="center">
                    <a href="@Url.Action("Index", "DamageInspMajor", new { id = bridge.BridgeId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Inspection" style="font-size: 14px"></a>
                </td>
            </tr>
        }
        <tr style="background-color: lightgray">
            <td colspan="12"></td>
        </tr>
    }
</table>
