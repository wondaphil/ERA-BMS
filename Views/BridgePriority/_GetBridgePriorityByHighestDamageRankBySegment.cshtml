@model IEnumerable<ERA_BMS.Models.BridgePriorityByHighestDamageRank>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">Bridge Priority by Highest Damage Rank for Road Segment <b>@ViewBag.Segment</b> (Section: <b>@ViewBag.Section</b>, District: <b>@ViewBag.District</b>, Inspection Year: <b>@ViewBag.InspectionYear</b>)</h3>
    </div>

    <div class="panel-body">
        <br />
        <br />
        <table class="table table-striped table-condensed table-responsive table-bordered display compact hover" id="tblbridgepriority">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RevisedBridgeNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BridgeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BridgeLength)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BridgeType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Recommendation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DeckSlab)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ConcreteGirder)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PierAndFoundation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AbutmentAndWingWall)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bearing)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RepairCost)
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RevisedBridgeNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BridgeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BridgeLength)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BridgeType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Recommendation)
                        </td>

                        @{
                            string bg = item.DeckSlab == "A+" ? "red" : "";
                            string fore = item.DeckSlab == "A+" ? "white" : "";
                        }
                        <td align="center" style="font-weight: bold; background-color: @bg; color: @fore">
                            @Html.DisplayFor(model => item.DeckSlab)
                        </td>

                        @{
                            bg = item.ConcreteGirder == "A+" ? "red" : "";
                            fore = item.ConcreteGirder == "A+" ? "white" : "";
                        }
                        <td align="center" style="font-weight: bold; background-color: @bg; color: @fore">
                            @Html.DisplayFor(model => item.ConcreteGirder)
                        </td>

                        @{
                            bg = item.PierAndFoundation == "A+" ? "red" : "";
                            fore = item.PierAndFoundation == "A+" ? "white" : "";
                        }
                        <td align="center" style="font-weight: bold; background-color: @bg; color: @fore">
                            @Html.DisplayFor(model => item.PierAndFoundation)
                        </td>

                        @{
                            bg = item.AbutmentAndWingWall == "A+" ? "red" : "";
                            fore = item.AbutmentAndWingWall == "A+" ? "white" : "";
                        }
                        <td align="center" style="font-weight: bold; background-color: @bg; color: @fore">
                            @Html.DisplayFor(model => item.AbutmentAndWingWall)
                        </td>

                        @{
                            bg = item.Bearing == "A+" ? "red" : "";
                            fore = item.Bearing == "A+" ? "white" : "";
                        }
                        <td align="center" style="font-weight: bold; background-color: @bg; color: @fore">
                            @Html.DisplayFor(model => item.Bearing)
                        </td>
                        <td align="right">
                            @item.RepairCost.Value.ToString("#,0.00")
                        </td>
                        <td align="center">
                            <a href="@Url.Action("Index", "BridgeInventory", new { id = item.BridgeId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Inventory" style="font-size: 14px"></a>
                        </td>
                        <td align="center">
                            <a href="@Url.Action("Index", "DamageInspMajor", new { id = item.BridgeId, val = item.InspectionYear })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Inspection" style="font-size: 14px"></a>
                        </td>
                        <td align="center">
                            <a href="@Url.Action("BridgeMap", "BridgeLocation", new { id = item.BridgeId })" target="_blank" class="glyphicon glyphicon-map-marker" data-toggle="tooltip" title="View on Map" style="font-size: 14px"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of Bridges: <b>@Model.Count()</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        

        $('#tblbridgepriority').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            scrollX: true,
            searching: true,
            select: true,
            dom: 'lBfrtip',
            //buttons: ['copy', 'excel', 'pdf', 'print']
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        });
    });
</script>

