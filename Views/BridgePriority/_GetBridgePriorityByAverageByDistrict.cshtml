@model IEnumerable<ERA_BMS.ViewModels.BridgePriorityByAverageViewModel>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">Bridge Priority by Average (District: <b>@ViewBag.District</b>, Inspection Year: <b>@ViewBag.InspectionYear</b>)</h3>
    </div>

    <div class="panel-body">
        <br />
        <br />
        <table class="table table-striped table-condensed table-responsive table-bordered display compact hover" id="tblbridgepriority">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RevisedBridgeNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BridgeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InspRecommendation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ServiceCondition)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.RepairCost)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.RepairCostPerc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DmgPerc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PriorityVal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AverageDamage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequiredAction)
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RevisedBridgeNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BridgeName)
                        </td>
                        @{
                            string bg = item.UrgencyId == 2 ? "red" : "";
                            string fore = item.UrgencyId == 2 ? "white" : "";
                        }
                        <td style="background-color: @bg; color: @fore">
                            @Html.DisplayFor(modelItem => item.InspRecommendation)
                        </td>
                        @{
                            bg = item.ServiceConditionId == 3 ? "red" : "";
                            fore = item.ServiceConditionId == 3 ? "white" : "";
                        }
                        <td style="background-color: @bg; color: @fore" align="center">
                            @Html.DisplayFor(modelItem => item.ServiceCondition)
                        </td>
                        @*<td align="right">
                            @Html.DisplayFor(modelItem => item.RepairCost)
                        </td>*@
                        <td style="background-color: yellow; font-weight: bold" align="right">
                            @Html.DisplayFor(modelItem => item.RepairCostPerc)
                        </td>
                        <td style="background-color: yellow; font-weight: bold" align="right">
                            @Html.DisplayFor(modelItem => item.DmgPerc)
                        </td>
                        <td style="background-color: yellow; font-weight: bold" align="right">
                            @Html.DisplayFor(modelItem => item.PriorityVal)
                        </td>
                        <td style="background-color: aqua; font-weight: bold" align="right">
                            @Html.DisplayFor(modelItem => item.AverageDamage)
                        </td>
                        @{
                            bg = item.RequiredActionId == 3 ? "red" : "";
                            fore = item.RequiredActionId == 3 ? "white" : "";
                        }
                        <td style="background-color: @bg; color: @fore">
                        
                            @Html.DisplayFor(modelItem => item.RequiredAction)
                        </td>
                        <td align="center">
                            <a href="@Url.Action("Index", "BridgeInventory", new { id = item.BridgeId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Inventory" style="font-size: 14px"></a>
                        </td>
                        <td align="center">
                            <a href="@Url.Action("Index", "DamageInspMajor", new { id = item.BridgeId, val = item.InspectionYear })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Inspection" style="font-size: 14px"></a>
                        </td>
                        <td align="center">
                            <a href="@Url.Action("BridgeMap", "BridgeLocation", new { id = item.BridgeId })" target="_blank" class="glyphicon glyphicon-map-marker" data-toggle="tooltip" title="View on Map" style="font-size: 14px"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of Bridges: <b>@Model.Count()</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#tblbridgepriority').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            scrollX: true,
            searching: true,
            select: true,
            dom: 'lBfrtip',
            order: [[6, "des"]], // order by Average Damage %
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        });
    });
</script>

