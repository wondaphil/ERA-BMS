        </div>
    </li>
</ul>

<!-- Tab Content Containers -->
<div class="tab-content">
    <div class="tab-pane fade in active" id="_GeneralInfoTab">
        <div id="generalInfo">
            <!-- Bridges General Info Edit controls display here -->
            <!-- If index is opened with some bridge id value, populate the general info -->
            @if (Model != null)
            { 
                if (Model.GenInfo == null)
                {
                    @Html.Partial("GeneralInfoNew", Model.GenInfo, new ViewDataDictionary());
                }
                else
                {
                    @Html.Partial("GeneralInfo", Model.GenInfo);
                }
            }
        </div>
    </div>
    <div class="tab-pane fade" id="_SuperStructureTab">
        <div id="superStructure">
            <!-- Super Structure displays here -->
            @if (Model != null)
            {
                if (Model.SuperStr == null)
                {
                    @Html.Partial("SuperStructureNew", Model.SuperStr, new ViewDataDictionary());
                }
                else
                {
                    @Html.Partial("SuperStructure", Model.SuperStr);
                }
            }
        </div>
    </div>
    <div class="tab-pane fade" id="_AbutmentTab">
        <div id="abutment">
            <!-- Abutment displays here -->
            @if (Model != null)
            {
                if (Model.Abutment == null)
                {
                    @Html.Partial("AbutmentNew", Model.Abutment, new ViewDataDictionary());
                }
                else
                {
                    @Html.Partial("Abutment", Model.Abutment);
                }
            }
         </div>
    </div>
    <div class="tab-pane fade" id="_PierTab">
        <div id="pier">
            <!-- Pier and Foundation displays here -->
            @if (Model != null)
            {
                @Html.Partial("Pier", Model.Piers);
            }
        </div>
    </div>
    <div class="tab-pane fade" id="_AncillaryTab">
        <div id="ancillary">
            <!-- Ancillaries display here -->
            @if (Model != null)
            {
                if (Model.Ancillaries == null)
                {
                    @Html.Partial("AncillaryNew", Model.Ancillaries, new ViewDataDictionary());
                }
                else
                {
                    @Html.Partial("Ancillary", Model.Ancillaries);
                }
            }
        </div>
    </div>
    <div class="tab-pane fade" id="_BridgeDocTab">
        <div id="bridgeDoc">
            <!-- Bridge Docs display here -->
            @if (Model != null)
            {
                @Html.Partial("BridgeDoc", Model.BridgeDoc);
            }
        </div>
    </div>
    <div class="tab-pane fade" id="_BridgeMediaTab">
        <div id="bridgeMedia">
            <!-- Bridge Medias display here -->
            @if (Model != null)
            {
                @Html.Partial("BridgeMedia", Model.BridgeMedia);
            }
        </div>
    </div>
</div>

<div id="wait" align="center" style="display: none">
    <img src="~/images/ajax-loader-big.gif" />
</div>

<script>
    $(document).ready(function () {
        function ClearAll() {
            $('#generalInfo').empty(); // clear the general info tab
            $('#superStructure').empty(); // clear the super structure tab
            $('#abutment').empty(); // clear the abutment tab
            $('#pier').empty(); // clear the pier tab
            $('#ancillary').empty(); // clear the ancillary tab
            $('#bridgeHistory').empty(); // clear the bridge history tab
            $('#bridgeDoc').empty(); // clear the bridge doc tab
            $('#bridgeMedia').empty(); // clear the bridge media tab
            //$('#bridgeImage').empty(); // clear the bridge image tab
            //$('#bridgeVideo').empty(); // clear the bridge video tab
            //$('#bridgeDrawing').empty(); // clear the bridge drawing Info tab
        }

        $('#ddlDistrict').change(function () {
            var selDistrictId = $('#ddlDistrict option:selected').val();
            $('#ddlSection option').remove(); //empty the section dropdown list
            $('#ddlSegment option').remove(); //empty the segment dropdown list
            $('#ddlBridge option').remove(); //empty the bridge dropdown list
            ClearAll();
            if (selDistrictId != "0") //if some district is selected
            {
                $.ajax({
                    url: '@Url.Action("_GetSections", "LocationsDDL")',
                    data: { districtid: selDistrictId },
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        var markup = '<option value="0" id="noselect"> --Select Section --</option>';
                        $.each(data, function (i, section) {
                            markup += '<option value="' + section.Value + '">' + section.Text + '</option>'
                            $('#ddlSection').html(markup);
                        });
                    }
                });
            }
        });

        $('#ddlSection').change(function () {
            var selSectionId = $('#ddlSection option:selected').val();
            $('#ddlSegment option').remove(); //empty the segment dropdown list
            $('#ddlBridge option').remove(); //empty the bridge dropdown list
            ClearAll();

            if (selSectionId != "0") //if some section is selected
            {
                $.ajax({
                    url: '@Url.Action("_GetSegments", "LocationsDDL")',
                    data: { sectionid: selSectionId },
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        var markup = '<option value="0" id="noselect"> --Select Segment --</option>';
                        $.each(data, function (i, segment) {
                            markup += '<option value="' + segment.Value + '">' + segment.Text + '</option>'
                            $('#ddlSegment').html(markup);
                        });
                    }
                });
            }
        });

        $('#ddlSegment').change(function () {
            var selSegmentId = $('#ddlSegment option:selected').val();
            $('#ddlBridge option').remove(); //empty the bridge dropdown list
            ClearAll();

            if (selSegmentId != "0") //if some segment is selected
            {
                $.ajax({
                    url: '@Url.Action("_GetBridges", "LocationsDDL")',
                    data: { segmentid: selSegmentId },
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        var markup = '<option value="0" id="noselect"> --Select Bridge --</option>';
                        $.each(data, function (i, bridge) {
                            markup += '<option value="' + bridge.Value + '">' + bridge.Text + '</option>'
                            $('#ddlBridge').html(markup);
                        });
                    }
                });
            }
        });

        $('#ddlBridge').change(function () {
            var selBridgeId = $('#ddlBridge option:selected').val();
            ClearAll();

            if (selBridgeId != "0") //if some bridge is selected
            {
                //var bridgeNo = $('#ddlBridge option:selected').text().split('[').pop().split(']')[0]; // extract the bridge no

                $.ajax({
                    url: '@Url.Action("GeneralInfo", "BridgeInventory")',
                    data: { bridgeid: selBridgeId },
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        $('#generalInfo').html(data);
                    }
                });

                $.ajax({
                    url: '@Url.Action("SuperStructure", "BridgeInventory")',
                    data: { bridgeid: selBridgeId },
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        $('#superStructure').html(data);
                    }
                });

                $.ajax({
                    url: '@Url.Action("Abutment", "BridgeInventory")',
                    data: { bridgeid: selBridgeId },
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        $('#abutment').html(data);
                    }
                });

                $.ajax({
                    url: '@Url.Action("Pier", "BridgeInventory")',
                    data: { bridgeid: selBridgeId },
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        $('#pier').html(data);
                    }
                });

                $.ajax({
                    url: '@Url.Action("Ancillary", "BridgeInventory")',
                    data: { bridgeid: selBridgeId },
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        $('#ancillary').html(data);
                    }
                });

                $.ajax({
                    url: '@Url.Action("BridgeDoc", "BridgeInventory")',
                    data: { bridgeid: selBridgeId },
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        $('#bridgeDoc').html(data);
                    }
                });

                $.ajax({
                    url: '@Url.Action("BridgeMedia", "BridgeInventory")',
                    data: { bridgeid: selBridgeId },
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        $('#bridgeMedia').html(data);
                    }
                });
            }
        });

        $('#refresh').click(function () {
            $('#ddlBridge').trigger('change');
        });
    });

</script>
