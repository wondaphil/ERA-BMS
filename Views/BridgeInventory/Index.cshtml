                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                    <div class="form-horizontal">
                        <div class="form-group form-group-sm">
                            <label class="control-label col-lg-2 col-md-3 col-sm-4">Bridge</label>
                            <div class="col-lg-9 col-md-8 col-sm-8">
                                @*@Html.DropDownList("ddlBridge", (List<SelectListItem>)ViewBag.Bridges, new { @class = "form-control" })*@
                                @Html.DropDownList("ddlBridge", new SelectList(ViewBag.Bridges, "Value", "Text", TempData["BridgeId"]), htmlAttributes: new { @class = "form-control" })
