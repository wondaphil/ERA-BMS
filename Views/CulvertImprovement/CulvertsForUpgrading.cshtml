
@{
    ViewBag.Title = "Culverts for Upgrading";
}

<h2>Culverts for Upgrading (<b style="color: red">Replacement</b>)</h2>

@using (Html.BeginForm())
{
    <div class="panel panel-default">
        @*<div class="panel-heading">
            <h3 class="panel-title panel-info">Please select <b>District</b>, <b>Section</b> and <b>Road Segment</b> from the dropdown list</h3>
        </div>*@
        <div class="panel-body">

            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-sm-4 col-xs-6">
                    <div class="form-horizontal">
                        <div class="form-group form-group">
                            <label class="control-label col-md-2">District</label>
                            <div class="col-md-8">
                                @Html.DropDownList("ddlDistrict", new SelectList(ViewBag.Districts, "Value", "Text"), new { @class = "form-control" })
                                <!--<label class="control-label col-lg-6 col-md-8" id="distrIdDIV">--> <!-- District id appears here --> <!--</label>-->
                                <div class="clearfix visible-lg visible-md visible-sm visible-xs"></div> <!-- Add clearfix (or new line break) for only the sm -->
                                <button type="button" class="btn btn-primary glyphicon glyphicon-search" id="searchbydistrict" data-toggle="tooltip" title="Search by District"></button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-4 col-xs-6">
                    <div class="form-horizontal">
                        <div class="form-group form-group">
                            <label class="control-label col-md-2">Section</label>
                            <div class="col-md-8">
                                <select class="form-control" id="ddlSection">
                                    <!-- Sections list populates here -->
                                </select>
                                <!--<label class="control-label col-lg-7 col-md-9" id="secIdDIV">--> <!-- Section id appears here --> <!--</label>-->
                                <div class="clearfix visible-lg visible-md visible-sm visible-xs"></div> <!-- Add clearfix (or new line break) for only the sm -->
                                <button type="button" class="btn btn-primary glyphicon glyphicon-search" id="searchbysection" data-toggle="tooltip" title="Search by Section"></button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="clearfix visible-xs"></div> <!-- Add clearfix (or new line break) for only the xs -->

                <div class="col-sm-4 col-xs-6">
                    <div class="form-horizontal">
                        <div class="form-group form-group">
                            <label class="control-label col-md-2">Road Segment</label>
                            <div class="col-md-8">
                                <select class="form-control" id="ddlSegment">
                                    <!-- Segments list populates here -->
                                </select>
                                <!--<label class="control-label" id="segIdDIV">--> <!-- Segment id appears here --> <!--</label>-->
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-4">
                    <div class="form-horizontal">
                        <div class="form-group form-group" id="inspyear">
                            <!-- Hide the inspection year -->
                            <label for="ddlInspectionYear" class="control-label col-lg-5 col-md-5 col-sm-6 col-xs-12">Inspection Year</label>
                            <div class="col-lg-5 col-md-5 col-sm-6 col-xs-10">
                                @Html.DropDownList("ddlInspectionYear", (List<SelectListItem>)ViewBag.InspectionYearList, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                @*<div class="col-md-1 col-sm-2 col-xs-6 navbar-right" align="right">
            <a class="btn btn-primary" data-toggle="tooltip" title="Refresh" id="refresh"> <span class="glyphicon glyphicon-refresh"></span></a>
        </div>*@
            </div>
        </div>
    </div>
    <div id="culvertsForUpgradingPartial">
        <!-- Culverts for Upgrading list displays here -->
    </div>
}

<div id="wait" align="center" style="display: none">
    <img src="~/images/ajax-loader-big.gif" />
</div>

<script>
    $(document).ready(function () {
        $('#ddlDistrict').change(function () {
            var selDistrictId = $('#ddlDistrict option:selected').val();
            $('#ddlSection option').remove(); //empty the section dropdown list
            $('#secIdDIV').text(""); //clear section no. indicator
            $('#ddlSegment option').remove(); //empty the segment dropdown list
            $('#segIdDIV').text(""); //clear segment no. indicator
            $('#culvertsForUpgradingPartial').empty(); // clear the culverts for upgrading place holder
            if (selDistrictId == "0") //if no district is selected
            {
                $('#distrIdDIV').text(""); //clear district no. indicator
            }
            else {
                $('#distrIdDIV').text("District No. = " + selDistrictId );
                $.ajax({
                    url: '@Url.Action("_GetSections", "LocationsDDL")',
                    data: { districtid: selDistrictId },
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        var markup = '<option value="0" id="noselect"> --Select Section --</option>';
                        $.each(data, function (i, section) {
                            markup += '<option value="' + section.Value + '">' + section.Text + '</option>'
                            $('#ddlSection').html(markup);
                        });
                    }
                });
            }
        });

        $('#ddlSection').change(function () {
            var selSectionId = $('#ddlSection option:selected').val();
            $('#ddlSegment option').remove(); //empty the segment dropdown list
            $('#segIdDIV').text(""); //clear segment no. indicator
            $('#culvertsForUpgradingPartial').empty(); // clear the culverts for upgrading place holder

            if (selSectionId == "0") //if no section is selected
            {
                $('#secIdDIV').text(""); //clear section no. indicator
            }
            else {
                $('#secIdDIV').text("Section No. = " + selSectionId);

                $.ajax({
                    url: '@Url.Action("_GetSegments", "LocationsDDL")',
                    data: { sectionid: selSectionId },
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        var markup = '<option value="0" id="noselect"> --Select Segment --</option>';
                        $.each(data, function (i, segment) {
                            markup += '<option value="' + segment.Value + '">' + segment.Text + '</option>'
                            $('#ddlSegment').html(markup);
                        });
                    }
                });
            }
        });

        $('#ddlSegment').change(function () {
            var selSegmentId = $('#ddlSegment option:selected').val();
            var selInspectionYear = $('#ddlInspectionYear option:selected').val();

            $('#culvertsForUpgradingPartial').empty(); //clear the culvert observation and recommendation place holder
            $('#SegIdDIV').text("");
            if (selSegmentId != "0") //if some segment is selected
            {
                $('#segIdDIV').text("Road Id = " + selSegmentId);
                $.ajax({
                    url: '@Url.Action("_GetCulvertsForUpgradingBySegment", "CulvertImprovement")',
                    data: { segmentid: selSegmentId, inspectionyear: selInspectionYear },
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        $('#culvertsForUpgradingPartial').html(data);
                    }
                });
            }
        });

        $('#searchbydistrict').click(function () {
            var selDistrictId = $('#ddlDistrict option:selected').val();
            var selInspectionYear = $('#ddlInspectionYear option:selected').val();

            $('#culvertsForUpgradingPartial').empty(); //clear the bridge priority place holder

            if (selDistrictId == "0") { //if "All District" is selected
                $.ajax({
                    url: '@Url.Action("_GetCulvertsForUpgradingAll", "CulvertImprovement")',
                    data: { inspectionyear: selInspectionYear },
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        $('#culvertsForUpgradingPartial').html(data);
                    }
                });
            }
            else {
                $.ajax({
                    url: '@Url.Action("_GetCulvertsForUpgradingByDistrict", "CulvertImprovement")',
                    data: { districtid: selDistrictId, inspectionyear: selInspectionYear },
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        $('#culvertsForUpgradingPartial').html(data);
                    }
                });
            }
        });

        $('#searchbysection').click(function () {
            var selSectionId = $('#ddlSection option:selected').val();
            var selInspectionYear = $('#ddlInspectionYear option:selected').val();

            if (selSectionId != "0") //if some section is selected
            {
                $('#culvertsForUpgradingPartial').empty(); // clear the culverts place holder

                $.ajax({
                    url: '@Url.Action("_GetCulvertsForUpgradingBySection", "CulvertImprovement")',
                    data: { sectionid: selSectionId, inspectionyear: selInspectionYear },
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        $('#culvertsForUpgradingPartial').html(data);
                    }
                });
            }
        });
    });

    function SelectedLevel() {
        var selDistrictId = $('#ddlDistrict option:selected').val();
        var selSectionId = $('#ddlSection option:selected').val();
        var selSegmentId = $('#ddlSegment option:selected').val();
        
        if (typeof selSegmentId != 'undefined' && selSegmentId != "0")
            return "Segment";
        else {
            if (typeof selSectionId != 'undefined' && selSectionId != "0")
                return "Section";
            else {
                if (typeof selDistrictId != 'undefined')
                    if (selDistrictId == "0")
                        return "All";
                    else
                        return "District";
                else
                    return "none";
            }
        }
        

    }

    $('#ddlInspectionYear').change(function () {
        var selLevel = SelectedLevel();
        switch (selLevel) {
            case "All":
                $('#searchbydistrict').trigger('click');
                break;

            case "District":
                $('#searchbydistrict').trigger('click');
                break;

            case "Section":
                $('#searchbysection').trigger('click');
                break;

            case "Segment":
                $('#ddlSegment').trigger('change');
                break;
        }
    });

</script>





