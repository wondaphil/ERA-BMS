@model IEnumerable<ERA_BMS.Models.CulvertImprovement>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">Culvert Improvement Action Records in year <b>@ViewBag.ImprovementYear</b></h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-responsive display compact hover" id="tblbrgimprindicator">
            <thead>
                <tr>
                    <th>Item No</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Culvert.Segment.Section.District.DistrictName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Culvert.Segment.Section.SectionName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Culvert.Segment.SegmentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Culvert.RevisedCulvertNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Culvert.CulvertStructure.CulvertType.CulvertTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Culvert.CulvertGeneralInfo.ConstructionYear)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImprovementType.ImprovementTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImprovementCost)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImprovementAction)
                    </th>
                </tr>
            </thead>

            <tbody>
                @{  
                    int itemNo = 0;
                    double totalImprovCost = 0.0;
                 }
                @foreach (var item in Model)
                {
                    <tr>
                        @{ itemNo++;}
                        <td>@itemNo</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Culvert.Segment.Section.District.DistrictName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Culvert.Segment.Section.SectionName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Culvert.Segment.SegmentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Culvert.RevisedCulvertNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Culvert.CulvertStructure.CulvertType.CulvertTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Culvert.CulvertGeneralInfo.ConstructionYear)
                        </td>
                        @{
                            string bg = "";
                            string fore = "";
                            if (item.ImprovementType.ImprovementTypeId == 2)
                            {
                                bg = "red";
                                fore = "white";
                            }
                        }
                        <td style="background-color: @bg; color: @fore">
                            @*@Html.DisplayFor(modelItem => item.ImprovementType.ImprovementTypeId) -*@
                            @Html.DisplayFor(modelItem => item.ImprovementType.ImprovementTypeName)
                        </td>
                        <td>
                            @item.ImprovementCost.Value.ToString("#,0.00")
                            @{ totalImprovCost += (double)@item.ImprovementCost;}
                        </td>
                        @*<td style="max-width: 100px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; ">*@
                        <td style="max-width: 100px; word-break: break-all;">
                            @Html.DisplayFor(modelItem => item.ImprovementAction)
                        </td>
                    </tr>
                }
                @*<tr>
                    <td colspan="6"></td>
                    <td><b>@totalImprovCost.ToString("#,0.00")</b></td>
                </tr>*@
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of Improvements in @ViewBag.ImprovementYear: <b>@Model.Count()</b> | Total Cost: <b>@totalImprovCost.ToString("#,0.00")</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#tblbrgimprindicator').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            scrollX: true,
            searching: true,
            select: true,
            dom: 'lBfrtip',
            //buttons: ['copy', 'excel', 'pdf', 'print']
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        });
    });
</script>


