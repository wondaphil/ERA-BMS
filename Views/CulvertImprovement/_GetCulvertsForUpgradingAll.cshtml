@model IEnumerable<ERA_BMS.Models.CulvertsForUpgrading>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">Culverts for Upgrading [<b>Replacement</b>] for <b>All Districts</b> (Inspection Year: <b>@ViewBag.InspectionYear</b>)</h3>
    </div>

    <div class="panel-body">
        <br />
        <br />
        <table class="table table-striped table-condensed table-responsive table-bordered display compact hover" id="tblculvertcommentsandrecommendations">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RevisedCulvertNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SegmentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SectionName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DistrictName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CulvertTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LengthTotal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.KMFromAddis)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ConstructionYear)
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.recommendation.MaintenanceUrgency.UrgencyName)*@
                        Inspector's Recommendation
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RevisedCulvertNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SegmentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SectionName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DistrictName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CulvertTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LengthTotal)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.KMFromAddis)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ConstructionYear)
                        </td>
                        @{
                            string bg = "";
                            string fore = "";
                            if (item.UrgencyIndex == 2)
                            {
                                bg = "red";
                                fore = "white";
                            }
                        }
                        <td style="background-color: @bg; color: @fore">
                            @Html.DisplayFor(modelItem => item.UrgencyIndex) -
                            @Html.DisplayFor(modelItem => item.InterventionType)
                        </td>
                        <td>
                            <a href="@Url.Action("Index", "DamageInspCulvert", new { id = item.CulvertId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Inspection" style="font-size: 14px"></a>
                        </td>
                        <td>
                            <a href="@Url.Action("BillOfQuantity", "CulvertInspectionReports", new { id = item.CulvertId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to BOQ" style="font-size: 14px"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of Culverts recommended for "<b style="color: red">Replacement</b>" in all Districts: <b>@Model.Count()</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        

        $('#tblculvertcommentsandrecommendations').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            scrollX: true,
            searching: true,
            select: true,
            dom: 'lBfrtip',
            //buttons: ['copy', 'excel', 'pdf', 'print']
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        });
    });
</script>
