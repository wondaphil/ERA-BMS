
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "obsRecomForm" }))
{
    <hr />
    <input type="hidden" id="culvertId" value="@TempData["CulvertId"]" />
    <input type="hidden" id="inspectiondate" value="@TempData["InspectionDate"]" />

    <div class="form-horizontal">
        <div class="row">
            <div class="col-xs-offset-1 col-lg-3 col-md-3 col-sm-4 col-xs-5">
                <div class="form-group form-group-sm required">
                    <label for="ddlUrgencyId" class="control-label col-md-offset-1">Inspector's Recommendation</label>
                    <div class="col-md-10">
                        @Html.DropDownList("ddlUrgencyId", (List<SelectListItem>)TempData["UrgencyList"], new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-3 col-xs-6">
                <div class="form-group form-group-sm">
                    <label for="txtRecommendation" class="control-label">Comments</label>
                    @*@Html.TextArea("txtRecommendation", ViewBag.Recommendation, new { @class = "form-control" })*@
                    <div>
                        <textarea class="form-control" id="txtRecommendation" name="txtRecommendation" rows="5">@TempData["Recommendation"]</textarea>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                <br /><br /><br />
                <div class="form-group form-group-sm">
                    <button type="button" id="saveObservRecom" class="btn btn-primary"><span class="glyphicon glyphicon-save"></span> Save</button>
                    <button type="reset" id="resetObservRecom" class="btn btn-primary"><span class="glyphicon glyphicon-refresh"></span> Reset</button>
                    <div id="statusObsRecom" class="success">
                        <!-- Save success or failure status text appears here-->
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>
    $(document).ready(function () {
        function ValidateDataEntry(obs) {
            if (obs.UrgencyIndex == -1)
                return false;

            return true;
        }

        $('#saveObservRecom').on('click', function () {
            var obs = {};
            obs.CulvertId = $('#culvertId').val();
            obs.UrgencyIndex = $('#ddlUrgencyId').val();
            obs.InspectorRecommendation = $('#txtRecommendation').val();
            obs.InspectionDate = $('#inspectiondate').val();
            if (ValidateDataEntry(obs)) {
                $.ajax({
                    type: 'POST',
                    cache: false,
                    url: '@Url.Action("ObservationAndRecommendationSave", "DamageInspCulvert")',
                    data: '{obsRecomm:' + JSON.stringify(obs) + '}',
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'html', //'json',
                    success: function (data) {
                        //alert("Data is saved succ");
                        //$('#statusObsRecom').text("Data is saved successfully"); statusObsRecom
                    }
                });
                if ($('#statusObsRecom').hasClass("text-danger"))
                    $('#statusObsRecom').removeClass("text-danger");
                $('#statusObsRecom').addClass("text-success");
                $('#statusObsRecom').text("Data is saved successfully");
            }
            else {
                if($('#statusObsRecom').hasClass("text-success"))
                    $('#statusObsRecom').removeClass("text-success");
                $('#statusObsRecom').addClass("text-danger");
                $('#statusObsRecom').text("Please enter or select all boxes marked with *");
            }
        });

        $('#resetObservRecom').on('click', function () {
            $('#obsRecomForm').trigger("reset"); // triger the normal reset function
        });
    });
</script>