@model IEnumerable<ERA_BCMS.Models.Bridge>

@{
    ViewBag.Title = "All Bridges";
}

<h2>All Bridges</h2>

<table class="table table-striped table-condensed table-responsive display compact hover" id="allBridges">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BridgeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BridgeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BridgeSerNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KMFromAddis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.XCoord)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YCoord)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GirderType.GirderTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Route.RouteName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Segment.SegmentName)
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BridgeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BridgeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BridgeSerNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KMFromAddis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.XCoord)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YCoord)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GirderType.GirderTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Route.RouteName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Segment.SegmentName)
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#allBridges').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            searching: true,
            select: true,
            dom: 'lBfrtip',
            buttons: ['copy', 'excel', 'pdf', 'print']
        });
    });
</script>