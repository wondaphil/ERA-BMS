@model ERA_BMS.Models.Bridge

@{
    ViewBag.Title = "Bridge Details";
}

<h2>Bridge Details</h2>

<div class="row">
    <div class="col-xs-6">
        <table class="table">
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.BridgeId)
                </td>

                <th>
                    @Html.DisplayFor(model => model.BridgeId)
                </th>
            </tr>

            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.BridgeNo)
                </td>

                <th>
                    @Html.DisplayFor(model => model.BridgeNo)
                </th>
            </tr>

            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.RevisedBridgeNo)
                </td>

                <th>
                    @Html.DisplayFor(model => model.RevisedBridgeNo)
                </th>
            </tr>

            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.BridgeName)
                </td>

                <th>
                    @Html.DisplayFor(model => model.BridgeName)
                </th>
            </tr>
        </table>
    </div>

    <div class="col-xs-6">
        <table class="table">
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Segment.Section.District.DistrictName)
                </td>

                <th>
                    @Html.DisplayFor(model => model.Segment.Section.District.DistrictName)
                </th>
            </tr>

            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Segment.Section.SectionName)
                </td>

                <th>
                    @Html.DisplayFor(model => model.Segment.Section.SectionName)
                </th>
            </tr>

            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Segment.SegmentName)
                </td>

                <th>
                    @Html.DisplayFor(model => model.Segment.SegmentName)
                </th>
            </tr>

            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.SubRoute.MainRoute.MainRouteName)
                </td>

                <th>
                    @Html.DisplayFor(model => model.SubRoute.MainRoute.MainRouteName)
                </th>
            </tr>

            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.SubRoute.SubRouteName)
                </td>

                <th>
                    @Html.DisplayFor(model => model.SubRoute.SubRouteName)
                </th>
            </tr>
        </table>
    </div>
</div>
<p>
    @*Show Edit button for admin only*@
    @if (User.IsInRole("Admin"))
    {
        <a href="@Url.Action("Edit", new { id = Model.BridgeId })" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span> Edit Bridge</a>
    }
    <a href="@Url.Action("New", new { id = Model.SegmentId })" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Register New Bridge</a>
    <a href="@Url.Action("Index", new { id = Model.SegmentId })" class="btn btn-primary"><span class="glyphicon glyphicon-backward"></span> Go to Bridge List</a>
    <a href="@Url.Action("Index", "BridgeInventory", new { id = Model.BridgeId })" target="_blank" class="btn btn-primary"><span class="glyphicon glyphicon-new-window"></span> Go to Inventory</a>
</p>
