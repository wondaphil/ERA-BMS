
@{
    ViewBag.Title = "Traffic Data Entry";
}

<h2>Traffic Data Entry</h2>

<hr />
@using (Html.BeginForm())
{
    <div class="panel panel-default">
        <div class="panel-body">

            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                    <div class="form-horizontal">
                        <div class="form-group form-group">
                            <label class="control-label col-md-2 col-sm-4">District</label>
                            <div class="col-md-5 col-sm-8">
                                @Html.DropDownList("ddlDistrict", new SelectList(ViewBag.Districts, "Value", "Text"), new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-5 col-xs-5">
                    <div class="form-horizontal">
                        <div class="form-group form-group">
                            <label class="control-label col-md-2 col-sm-4">Section</label>
                            <div class="col-md-5 col-sm-8">
                                @Html.DropDownList("ddlSection", new SelectList(ViewBag.Sections, "Value", "Text"), new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>



                <div class="col-md-1 col-xs-2 navbar-right">
                    <a class="btn btn-primary" data-toggle="tooltip" title="Refresh" id="refresh"> <span class="glyphicon glyphicon-refresh"></span></a>
                </div>
            </div>
        </div>
    </div>
}

<div id="roadSegmentADTPartial">
    <!-- Sub route with ADT list displays here -->
</div>


<div id="wait" align="center" style="display: none">
    <img src="~/images/ajax-loader-big.gif" />
</div>

<script>
    $(document).ready(function () {
        $('#ddlDistrict').change(function () {
            var selDistrictId = $('#ddlDistrict option:selected').val();
            $('#ddlSection option').remove(); //empty the section dropdown list
            $('#segmentsPartial').empty(); // clear the segments place holder

            if (selDistrictId != "0") //if some district is selected
            {
                $('#segmentsPartial').empty(); //empty the segment table

                $.ajax({
                    url: '@Url.Action("_GetSections", "LocationsDDL", new { area = "" })',
                    data: { districtid: selDistrictId },
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        var markup = '<option value="0" id="noselect"> --Select Section --</option>';
                        $.each(data, function (i, section) {
                            markup += '<option value="' + section.Value + '">' + section.Text + '</option>'
                            $('#ddlSection').html(markup);
                        });
                    }
                });
            }
        });

        $('#ddlSection').change(function () {
            var selSectionId = $('#ddlSection option:selected').val();
            $('#roadSegmentADTPartial').empty(); //clear the subroutes place holder

            if (selSectionId != "0") // some main route is selected
            {
                $.ajax({
                    url: '@Url.Action("_GetTrafficData", "TrafficData")',
                    data: { sectionid: selSectionId },
                    type: 'GET',
                    dataType: 'html',
                    beforeSend: function () { $('#wait').show(); },
                    complete: function () { $('#wait').hide(); },
                    success: function (data) {
                        $('#roadSegmentADTPartial').html(data);
                    }
                });
            }
        });



        $('#refresh').click(function () {
            var selSectionId = $('#ddlSection option:selected').val();
            if (selSectionId != "0" && typeof selSectionId != 'undefined') //if some section is selected
            {
                $('#ddlSection').trigger('change');
            } 
        });
    });
</script>

