@model IEnumerable<ERA_BMS.Models.BridgeDoc>

@{
    ViewBag.Title = "Bridge Doc";
}

@*<div style="display: flex;">*@
<div class="row">
    @if (Model.Count() == 0)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-10" align="center">
            <h5><i>No documents for Bridge: <b>@TempData["BridgeName"]</b></i></h5>
        </div>
    }
    else
    {
        foreach (var item in Model)
        {

            string fullPath = item.DocFilePath;
            string filename = Path.GetFileName(fullPath); //extract the file name from the full path
            string description = item.Description;
            string icon = "";

            if (filename.EndsWith("pdf"))
            {
                icon = "/images/pdf_icon.png";
            }
            else if (filename.EndsWith("doc") || filename.EndsWith("docx"))
            {
                icon = "/images/word_icon.png";
            }


            @*<div style="clear: left;">*@
            <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4">
                <table>
                    <tr><td><a href="@fullPath" target="_blank"><img src="@icon" alt="pdf" style="height:25px; width: 25px; margin: 20px; flex: 0.75; clear: left" /></a></td></tr>
                    <tr><td><p align="center">@description</p></td></tr>
                    <tr><td><p align="center">(@filename)</p></td></tr>
                </table>
            </div>

        }
    }
</div>

