@model ERA_BMS.Models.Bridge

<div class="container-fluid">
    <div class="row">
        @if (Model != null)
        {
            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">@Html.Partial("Location", Model)</div>
        }
        @if (Model.BridgeGeneralInfo != null)
        {
            <div class="col-lg-6 col-md-6 col-sm-8 col-xs-12">@Html.Partial("GeneralInfo", Model.BridgeGeneralInfo)</div>
        }
        <div class="clearfix visible-sm"></div> <!-- Add clearfix (or new line break) for only the sm -->
        
        @if (Model.SuperStructure != null)
        {
            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">@Html.Partial("SuperStructure", Model.SuperStructure)</div>
        }
        @if (Model.Abutment != null)
        {
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">@Html.Partial("Abutment", Model.Abutment)</div>
        }
        <div class="clearfix visible-sm"></div> <!-- Add clearfix (or new line break) for only the sm -->
        
        @if (Model.Ancillary != null)
        {
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">@Html.Partial("Ancillary", Model.Ancillary)</div>
        }
        @if (Model.Piers != null)
        {
            <div class="col-lg-12 col-md-12 col-sm-8 col-xs-12">@Html.Partial("Pier", Model.Piers)</div>
        }
    </div>
</div>






