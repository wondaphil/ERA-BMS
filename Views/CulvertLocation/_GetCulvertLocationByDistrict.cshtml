@model IEnumerable<ERA_BMS.Models.Culvert>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">Location Information of Culverts (District: <b>@ViewBag.DistrictName</b>)</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-responsive table-bordered display compact hover" id="Culverts">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RevisedCulvertNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Segment.Section)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Segment)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CulvertGeneralInfo.KMFromAddis)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CulvertGeneralInfo.XCoord)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CulvertGeneralInfo.YCoord)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CulvertGeneralInfo.UtmZoneEthiopia.UtmZone)
                    </th>
                    <th>
                        Latitude (Decimal)
                    </th>
                    <th>
                        Longitude (Decimal)
                    </th>
                    <th>
                        Latitude (DMS)
                    </th>
                    <th>
                        Longitude (DMS)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.OrderBy(s => s.RevisedCulvertNo))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RevisedCulvertNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Segment.Section.SectionName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Segment.SegmentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CulvertGeneralInfo.KMFromAddis)
                        </td>

                        @if (item.CulvertGeneralInfo == null)
                        {
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td align="center"><a href="@Url.Action("Index", "CulvertInventory", new { id = item.CulvertId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Inventory" style="font-size: 14px"></a></td>
                            <td></td>
                            continue;
                        }

                        @if (item.CulvertGeneralInfo.XCoord != null)
                        {
                            <td>@item.CulvertGeneralInfo.XCoord.Value.ToString("#.000")</td>
                        }
                        else
                        {
                            <td></td>
                        }

                        @if (item.CulvertGeneralInfo.YCoord != null)
                        {
                            <td>@item.CulvertGeneralInfo.YCoord.Value.ToString("#.000")</td>
                        }
                        else
                        {
                            <td></td>
                        }

                        <td>
                            @Html.DisplayFor(modelItem => item.CulvertGeneralInfo.UtmZoneEthiopia.UtmZone)
                        </td>
                        <td>
                            @item.CulvertGeneralInfo.LatitudeDecimal
                        </td>
                        <td>
                            @item.CulvertGeneralInfo.LongitudeDecimal
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CulvertGeneralInfo.LatitudeDMS)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CulvertGeneralInfo.LongitudeDMS)
                        </td>
                        <td align="center">
                            <a href="@Url.Action("Index", "CulvertInventory", new { id = item.CulvertId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Inventory" style="font-size: 14px"></a>
                        </td>
                        <td align="center">
                            <a href="@Url.Action("CulvertMap", "CulvertLocation", new { id = item.CulvertId })" target="_blank" class="glyphicon glyphicon-map-marker" data-toggle="tooltip" title="Go to Map" style="font-size: large"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of Culverts: <b>@Model.Count()</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {


        $('#Culverts').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            scrollX: true,
            searching: true,
            select: true,
            dom: 'lBfrtip',
            //buttons: ['copy', 'excel', 'pdf', 'print']
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        });
    });
</script>

