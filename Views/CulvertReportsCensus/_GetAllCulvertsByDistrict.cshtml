@model IEnumerable<ERA_BMS.ViewModels.CSSDViewModel>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">List of Culverts in <b>@ViewBag.DistrictName</b> District Grouped in <b>Section</b> and <b>Road Segment</b></h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-responsive table-bordered display compact hover" id="allCulverts">
            <tbody>
                <tr>
                    <td colspan="11">
                        <h4><b>District: @ViewBag.DistrictName</b> <i>(No. of Sections: @Model.GroupBy(b => b.sections).Count())</i></h4>
                    </td>
                </tr>
                @foreach (var sec in Model.GroupBy(d => d.sections))
                {
                    <tr>
                        <td colspan="11">
                            <h5><b>Section: [@sec.Key.SectionNo] @sec.Key.SectionName</b> <i>(No. of Road Segments: @sec.GroupBy(b => b.segments).Count())</i></h5>
                        </td>
                    </tr>
                    foreach (var seg in sec.GroupBy(b => b.segments))
                    {
                        <tr>
                            <td colspan="11">
                                <h5><b>Road Segment: [@seg.Key.RevisedRoadId] @seg.Key.SegmentName <i>(No. of Bridges: @seg.GroupBy(b => b.culverts).Count())</i></b></h5>
                            </td>
                        </tr>
                        <tr>
                            <th></th>
                            <th>Revised Culvert Id</th>
                            <th>Dist. from AA (Km)</th>
                            <th>Culvert Type</th>
                            <th>Abutment Type</th>
                            <th>Total Length (m)</th>
                            <th>Length Inside (m)</th>
                            <th>Constr. Year</th>
                            <th>Init. Constr. Cost, ETB</th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>

                        foreach (var culvert in seg.GroupBy(c => c.culverts).Select((x, i) => new { Data = x, Index = i }))
                        {
                            <tr>
                                <td> @( (culvert.Index + (Int32)1)) </td>
                                <td>
                                    @Html.DisplayFor(modelItem => culvert.Data.Key.RevisedCulvertNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => culvert.Data.Key.CulvertGeneralInfo.KMFromAddis)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => culvert.Data.Key.CulvertStructure.CulvertType.CulvertTypeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => culvert.Data.Key.CulvertStructure.AbutmentType.AbutmentTypeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => culvert.Data.Key.CulvertStructure.LengthTotal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => culvert.Data.Key.CulvertStructure.LengthInside)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => culvert.Data.Key.CulvertGeneralInfo.ConstructionYear)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => culvert.Data.Key.CulvertGeneralInfo.ConstructionCost)
                                </td>
                                <td align="center">
                                    <a href="@Url.Action("Index", "CulvertProfile", new { id = culvert.Data.Key.CulvertId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Profile" style="font-size: 14px"></a>
                                </td>
                                <td align="center">
                                    <a href="@Url.Action("Index", "DamageInspCulvert", new { id = culvert.Data.Key.CulvertId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to Inspection" style="font-size: 14px"></a>
                                </td>
                                <td align="center">
                                    <a href="@Url.Action("BillOfQuantity", "CulvertInspectionReports", new { id = culvert.Data.Key.CulvertId })" target="_blank" class="glyphicon glyphicon-new-window" data-toggle="tooltip" title="Go to BOQ" style="font-size: 14px"></a>
                                </td>
                                <td align="center">
                                    <a href="@Url.Action("CulvertMap", "CulvertLocation", new { id = culvert.Data.Key.CulvertId })" target="_blank" class="glyphicon glyphicon-map-marker" data-toggle="tooltip" title="View Map" style="font-size: 14px"></a>
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of Culverts: <b>@Model.Count()</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#allCulverts').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            scrollX: true,
            searching: true,
            select: true,
            dom: 'lBfrtip',
            buttons: ['copy', 'excel', 'pdf', 'print']
        });
    });
</script>
