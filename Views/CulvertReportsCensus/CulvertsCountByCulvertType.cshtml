@model IEnumerable<ERA_BMS.ViewModels.CulvertTypeViewModel>

@{
    ViewBag.Title = "Culverts Count By Culvert Type";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">Culvert Count By <b>Culvert Type</b></h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-responsive display compact hover" id="culvertscountbydistrict">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Culvert Type</th>
                    <th>No. of Culverts</th>
                </tr>
            </thead>
            <tbody>
                @{int totalCount = 0; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CulvertTypes.CulvertTypeId</td>
                        <td>@item.CulvertTypes.CulvertTypeName</td>
                        <td>@item.CulvertCount</td>
                    </tr>
                    totalCount += item.CulvertCount;
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">No. of Culvert Types: <b>@Model.Count()</b> | No. of Culverts: <b>@totalCount</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#culvertscountbydistrict').dataTable({
            paging: false,
            bLengthChange: true,
            scrollY: 400,
            
            searching: true,
            select: true,
            dom: 'lBfrtip',
            //buttons: ['copy', 'excel', 'pdf', 'print']
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        }).columnFilter({
            "aoColumns": [
                { "type": "number-range" },
                { "type": "text" },
                { "type": "select" },
                { "type": "date-range" }
            ]
        });
    });
</script>