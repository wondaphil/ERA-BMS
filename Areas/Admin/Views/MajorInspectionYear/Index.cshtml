@model IEnumerable<ERA_BMS.Models.MajorInspectionYear>

@{
    ViewBag.Title = "Major Inspection Years";
}

<h2>Major Inspection Years</h2>

@{
    string textColor = "text-success";
    if (ViewBag.StatusMessage.Contains("error"))
    {
        textColor = "text-danger";
    }
}

<p id="statusmessage" class="@textColor" style="font-size: 15px">@ViewBag.StatusMessage</p>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info"><b>List of Major Inspection Years</b> with <b>Registered</b> and <b>Inspected</b> No. of Bridges/Culverts</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered centeredtable" id="tblMajorInspectionYear">
            <tr>
                <th></th>
                <th></th>
                <th colspan="2">Year Range</th>
                <th colspan="2">Registered</th>
                <th colspan="2">Inspected</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.InspectionYear)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartYear)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndYear)
                </th>
                <th>
                    No. of Bridges
                </th>
                <th>
                    No. of Culverts
                </th>
                <th>
                    No. of Bridges
                </th>
                <th>
                    No. of Culverts
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remark)
                </th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="Id">
                        <input type="hidden" value="@item.Id" /> <!-- Unique Id of Major Inspection Year -->
                    </td>
                    <td class="InspectionYear">
                        <span>@Html.DisplayFor(modelItem => item.InspectionYear)</span>
                        <input type="text" value="@item.InspectionYear" style="display:none" size="3" />
                    </td>
                    <td class="StartYear">
                        <span>@Html.DisplayFor(modelItem => item.StartYear)</span>
                        <input type="text" value="@item.StartYear" style="display:none" size="3" />
                    </td>
                    <td class="EndYear">
                        <span>@Html.DisplayFor(modelItem => item.EndYear)</span>
                        <input type="text" value="@item.EndYear" style="display:none" size="3" />
                    </td>
                    <td class="NoOfRegisteredBridges">
                        <span>@Html.DisplayFor(modelItem => item.NoOfRegisteredBridges)</span>
                        <input type="text" value="@item.NoOfRegisteredBridges" style="display:none" size="3" />
                    </td>
                    <td class="NoOfRegisteredCulverts">
                        <span>@Html.DisplayFor(modelItem => item.NoOfRegisteredCulverts)</span>
                        <input type="text" value="@item.NoOfRegisteredCulverts" style="display:none" size="3" />
                    </td>
                    <td class="NoOfInspectedBridges">
                        <span>@Html.DisplayFor(modelItem => item.NoOfInspectedBridges)</span>
                        <input type="text" value="@item.NoOfInspectedBridges" style="display:none" size="3" />
                    </td>
                    <td class="NofInspectedCulverts">
                        <span>@Html.DisplayFor(modelItem => item.NofInspectedCulverts)</span>
                        <input type="text" value="@item.NofInspectedCulverts" style="display:none" size="3" />
                    </td>
                    <td class="Remark">
                        <span>@Html.DisplayFor(modelItem => item.Remark)</span>
                        <input type="text" value="@item.Remark" style="display:none" size="30" />
                    </td>
                    <td>
                        <a class="Edit glyphicon glyphicon-edit" href="javascript:;" data-toggle="tooltip" title="Edit"></a>
                        <a class="Update glyphicon glyphicon-ok" href="javascript:;" style="display:none" data-toggle="tooltip" title="Update"></a>
                        <a class="Confirm glyphicon glyphicon-ok" href="javascript:;" style="display:none" data-toggle="tooltip" title="Confirm"></a>
                    </td>
                    <td>
                        <a class="Cancel glyphicon glyphicon-remove" href="javascript:;" style="display:none" data-toggle="tooltip" title="Cancel"></a>
                        <a class="Delete glyphicon glyphicon-trash" href="javascript:;" data-toggle="tooltip" title="Delete"></a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total Major Inspection Years: <b>@Model.Count()</b> </h3>
    </div>
    <div class="panel-footer">
        <h5 class="panel-title">
            ** No. of <b>Registered bridges</b> for each inspection year is to be entered manually. <br />
        </h5>
    </div>
</div>

<div id="newPartial">
    <!-- New major inspection year partial displays here-->
</div>

<p>
    @*<a href="@Url.Action("New")" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Register New Inspection Year</a>*@
    <button id="new" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Register New Inspection Year</button>
    <a href="@Url.Action("Index", "ChartGraph", new { area = "", id = 18 })" id="chart" class="btn btn-primary" target="_blank"><span class="glyphicon glyphicon-stats" data-toggle="tooltip" title="Show No. of Registered/Inspected Bridges Graph"></span> View Graph</a>
</p>

<script type="text/javascript">
    $(document).ready(function () {
        //New event handler.
        $("#new").on("click", function () {
            // clear the status message
            $('#statusmessage').text("");

            $.ajax({
                url: '@Url.Action("NewMajorInspectionYearPartial", "MajorInspectionYear")',
                type: 'GET',
                dataType: 'html',
                success: function (data) {
                    $('#newPartial').html(data);
                }
            });
            $('#new').hide();
            $('#chart').hide();
        });

        //Edit event handler.
        $("body").on("click", "#tblMajorInspectionYear .Edit", function () {
            // clear the status message
            $('#statusmessage').text("");

            var row = $(this).closest("tr");
            $("td", row).each(function () {
                if ($(this).find("input").length > 0) {
                    $(this).find("input").show();
                    $(this).find("span").hide();
                }
             });
            row.find(".Update").show();
            row.find(".Cancel").show();
            row.find(".Delete").hide();
            $(this).hide();
        });

        //Update event handler.
        $("body").on("click", "#tblMajorInspectionYear .Update", function () {
            var row = $(this).closest("tr");
            $("td", row).each(function () {
                if ($(this).find("input").length > 0) {
                    var span = $(this).find("span");
                    var input = $(this).find("input");
                    span.html(input.val());
                    span.show();
                    input.hide();
                }
            });
            row.find(".Edit").show();
            row.find(".Delete").show();
            row.find(".Cancel").hide();
            $(this).hide();

            var majorInspYear = {};
            majorInspYear.Id = row.find('input[type=hidden]').val();
            majorInspYear.InspectionYear = row.find(".InspectionYear").find("span").html();
            majorInspYear.StartYear = row.find(".StartYear").find("span").html();
            majorInspYear.EndYear = row.find(".EndYear").find("span").html();
            majorInspYear.NoOfRegisteredBridges = row.find(".NoOfRegisteredBridges").find("span").html();
            majorInspYear.NoOfRegisteredCulverts = row.find(".NoOfRegisteredCulverts").find("span").html();
            majorInspYear.NoOfInspectedBridges = row.find(".NoOfInspectedBridges").find("span").html();
            majorInspYear.NofInspectedCulverts = row.find(".NofInspectedCulverts").find("span").html();
            majorInspYear.Remark = row.find(".Remark").find("span").html();

            //alert(JSON.stringify(majorInspYear));

            $.ajax({
                type: 'POST',
                url: '@Url.Action("UpdateMajorInspectionYear", "MajorInspectionYear")',
                data: '{inspYears:' + JSON.stringify(majorInspYear) + '}',
                contentType: 'application/json; charset=utf-8',
                dataType: 'text', //'html',
                success: function () {
                    $.ajax({
                        type: "GET",
                        url: '/StatusMessage/GetStatusMessage',
                        data: { id: 1 }, //StatusMessageId.ChangeDataSuccess = 1
                        dataType: "json",
                        success: function (data) {
                            $.each(data, function (i, item) {
                                if ($('#statusmessage').hasClass("text-danger"))
                                    $('#statusmessage').removeClass("text-danger");
                                $('#statusmessage').addClass("text-success");

                                $('#statusmessage').text(item.Message); // set the status message
                            });
                        },
                    });
                },
                error: function (xhr) {
                    //$('#status').text(xhr.status);
                }
            });
        });

        //Cancel event handler.
        $("body").on("click", "#tblMajorInspectionYear .Cancel", function () {
            var row = $(this).closest("tr");
            $("td", row).each(function () {
                if ($(this).find("input").length > 0) {
                    var span = $(this).find("span");
                    var input = $(this).find("input");
                    input.val(span.html());
                    span.show();
                    input.hide();
                }
                if ($(this).find("select").length > 0) {
                    $(this).find("select").hide();
                    $(this).find("span").show();
                }
            });
            row.find(".Edit").show();
            row.find(".Delete").show();
            row.find(".Update").hide();
            row.find(".Confirm").hide();
            $(this).hide();
        });

        //Delete event handler.
        $("body").on("click", "#tblMajorInspectionYear .Delete", function () {
            // clear the status message
            $('#statusmessage').text("");

            var row = $(this).closest("tr");
            row.find(".Edit").hide();
            row.find(".Confirm").show();
            row.find(".Cancel").show();
            row.find(".Delete").hide();
            $(this).hide();
        });

        //Confirm event handler.
        $("body").on("click", "#tblMajorInspectionYear .Confirm", function () {
            var row = $(this).closest("tr");
            var id = row.find('input[type=hidden]').val();
            //alert(id);
            $.ajax({
                type: "POST",
                url: '@Url.Action("DeleteMajorInspectionYear", "MajorInspectionYear")',
                data: '{id: "' + id + '"}',
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (response) {
                    if ($("#tblMajorInspectionYear tr").length > 2) {
                        row.remove();

                    } else {
                        row.find(".Edit").hide();
                        row.find(".Delete").hide();
                        row.find(".Confirm").hide();
                        row.find(".Cancel").hide();
                        row.find("span").html('&nbsp;');
                    }

                    $.ajax({
                        type: "GET",
                        url: '/StatusMessage/GetStatusMessage',
                        data: { id: 2 }, //StatusMessageId.DeleteDataSuccess = 2
                        dataType: "json",
                        success: function (data) {
                            $.each(data, function (i, item) {
                                if ($('#statusmessage').hasClass("text-danger"))
                                    $('#statusmessage').removeClass("text-danger");
                                $('#statusmessage').addClass("text-success");

                                $('#statusmessage').text(item.Message); // set the status message
                            });
                        },
                    });
                },
                error: function (xhr) {
                    //$('#status').text(xhr.status);
                }
            });
        });
    });
</script>
