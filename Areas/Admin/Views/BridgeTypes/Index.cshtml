@model IEnumerable<ERA_BMS.Models.BridgeType>

@{
    ViewBag.Title = "Bridge Types";
}

<h2>Bridge Types</h2>

<p>
    <a href="@Url.Action("New")" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Register New</a>
</p>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">List of Bridge Types</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-responsive table-bordered display compact hover" id="bridgetypes">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BridgeTypeId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BridgeTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BridgeTypeShortCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Remark)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BridgeTypeId)
                        </td>
                        <td>
                            @Html.ActionLink(@Html.DisplayFor(modelItem => item.BridgeTypeName).ToString(), "Details", new { id = item.BridgeTypeId })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BridgeTypeShortCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remark)
                        </td>
                        <td align="center">
                            <!-- with Tooltips -->
                            @Html.ActionLink(" ", "Edit", new { id = item.BridgeTypeId }, new { @class = "glyphicon glyphicon-edit", @data_toggle = "tooltip", title = "Edit" })
                        </td>
                        <td align="center">
                            @Html.ActionLink(" ", "Delete", new { id = item.BridgeTypeId }, new { @class = "glyphicon glyphicon-trash", @data_toggle = "tooltip", title = "Delete" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of Bridge Types: <b>@Model.Count()</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        
        $('#bridgetypes').DataTable({
            paging: false,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            
            searching: true,
            select: true,
            dom: 'lBfrtip',
            //buttons: ['copy', 'excel', 'pdf', 'print']
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        });
    });
</script>
