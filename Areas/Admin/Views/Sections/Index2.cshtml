@model IEnumerable<ERA_BCMS.Models.Section>

@{
    ViewBag.Title = "New Sections";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("New Section", "New", null, new { @class = "btn btn-primary" })
</p>

@using (Html.BeginForm())
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title panel-info">Please select district from the dropdown list</h3>
        </div>
        <div class="panel-body">

            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label col-md-2">District</label>
                        <div class="col-md-5">
                            @Html.DropDownList("ddlDistrict", (List<SelectListItem>)ViewBag.Districts, new { @class = "form-control" })
                            <div id="distrIdDIV" style="font-weight: bolder">  </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
        
    </div>

}

<div id="temp">

</div>
<div id="status">

</div>


<!-- Tab Buttons -->
<ul id="tabstrip" class="nav nav-tabs" role="tablist">
    <li class="active">
        <a href="#_FirstTab" role="tab" data-toggle="tab" id="tab1">Bridge</a>
    </li>
    <li>
        <a href="#_SecondTab" role="tab" data-toggle="tab" id="tab2">Bridge Info</a>
    </li>
    <li>
        <a href="#_ThirdTab" role="tab" data-toggle="tab" id="tab3">Super Structure</a>
    </li>
</ul>

<!-- Tab Content Containers -->
<div class="tab-content">
    <div class="tab-pane fade in active" id="_FirstTab">
        <!-- Call partial view to load initial page load data -->
        <div id="sectionsPartial">
            <!-- Sections list displays here -->
        </div>
    </div>
    <div class="tab-pane fade" id="_SecondTab">

        <div>Second</div>
    </div>
    <div class="tab-pane fade" id="_ThirdTab">

        <div>Third</div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('#ddlDistrict').change(function () {
            var selDistrictId = $('#ddlDistrict option:selected').val();
            
            if (selDistrictId == "0") //if no district is selected
            {
                $('#sectionsPartial').empty(); //clear the sections place holder
                selDistrictId = "";
                $('#distrIdDIV').text(selDistrictId); //clear district no. indicator
            }
            else {
                $('#distrIdDIV').text("District Id = " + selDistrictId);

                $.ajax({
                    url: '@Url.Action("_GetSections", "Sections")', //url: 'Sections/_GetSections',
                    data: { districtid: selDistrictId },
                    type: 'GET',
                    dataType: 'html',
                    success: function (data) {
                        $('#sectionsPartial').html(data);
                    }
                });
            }
        });

