@model IEnumerable<ERA_BMS.Models.CulvertType>

@{
    ViewBag.Title = "Culvert Types";
}

<h2>Culvert Types</h2>

<p>
    <a href="@Url.Action("New")" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Register New</a>
</p>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">List of Culvert Types</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-responsive display compact hover" id="culverttypes">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CulvertTypeId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CulvertTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CulvertTypeShortCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Remark)
                    </th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CulvertTypeId)
                        </td>
                        <td>
                            @Html.ActionLink(@Html.DisplayFor(modelItem => item.CulvertTypeName).ToString(), "Details", new { id = item.CulvertTypeId })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CulvertTypeShortCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remark)
                        </td>
                        <td>
                            <!-- with Tooltips -->
                            @Html.ActionLink(" ", "Edit", new { id = item.CulvertTypeId }, new { @class = "glyphicon glyphicon-edit", @data_toggle = "tooltip", title = "Edit" })
                        </td>
                        <td>
                            @Html.ActionLink(" ", "Delete", new { id = item.CulvertTypeId }, new { @class = "glyphicon glyphicon-trash", @data_toggle = "tooltip", title = "Delete" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of Culvert Types: <b>@Model.Count()</b></h3>
    </div>
</div>

