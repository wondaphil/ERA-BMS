@model ERA_BMS.Models.RoadClass

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "NewRoadClassForm", onsubmit = "return ValidateDataEntry()" }))
{
    <hr />
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <h2 align="center">New Road Function Class</h2>
            <hr />

            @*Holds a unique road class id*@
            @Html.HiddenFor(model => model.RoadClassId)

            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-6">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group form-group-sm required">
                    @Html.LabelFor(model => model.RoadClassName, htmlAttributes: new { @class = "control-label col-sm-5 col-xs-6" })
                    <div class="col-sm-7 col-xs-6">
                        @Html.EditorFor(model => model.RoadClassName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RoadClassName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <div class="form-group form-group-sm">
                    @Html.LabelFor(model => model.Remark, htmlAttributes: new { @class = "control-label col-sm-4 col-xs-3" })
                    <div class="col-sm-8 col-xs-9">
                        @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <div class="col-md-offset-3 col-xs-offset-1 col-md-8 col-xs-10 col-sm-12 col-xs-10">
                <div class="col-md-2 col-sm-2 col-xs-3">
                    <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-save"></span> Save</button>
                </div>
                <div class="col-sm-2 col-xs-3">
                    <button type="reset" class="btn btn-primary"><span class="glyphicon glyphicon-refresh"></span> Reset</button>
                </div>
                <div class="col-sm-2 col-xs-3">
                    <button type="button" id="cancel" class="btn btn-primary"><span class="glyphicon glyphicon-backward"></span> Cancel</button>
                </div>
                <div class="col-sm-7 col-xs-10">
                    <div id="validationStatus" class="success">
                        <!-- Validation status text appears here-->
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        // Assign a new road class id which is the next sequence in the road class table
        $.ajax({
            url: '@Url.Action("LastRoadFunctionClassId", "RoadFunctionClass")',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                $.each(data, function (i, item) {
                    $('#RoadClassId').val(item.RoadClassId); // set the district id
                });
            },
        });

        function ValidateDataEntry() {
            if ($('#RoadClassName').val() == "")
                return false;

            return true;
        }

        $('form').on('submit', function (e) {
            // validation code here
            if (!ValidateDataEntry()) {
                e.preventDefault();
                if ($('#validationStatus').hasClass("text-success"))
                    $('#validationStatus').removeClass("text-success");
                $('#validationStatus').addClass("text-danger");
                $('#validationStatus').text("Please enter Road Class Name");
            }
            else {
                if ($('#validationStatus').hasClass("text-danger"))
                    $('#validationStatus').removeClass("text-danger");
                $('#validationStatus').addClass("text-success"); $('#validationStatus').text("Saving...");
            }

        });

        $("#cancel").on("click", function () {
            window.location.href = "/Admin/RoadFunctionClass";
        });
    });
</script>