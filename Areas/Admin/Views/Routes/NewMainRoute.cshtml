@model ERA_BMS.Models.MainRoute

@{
    ViewBag.Title = "New Main Route";
}

<h2>Register New Main Route</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*Holds a unique main route id*@
        @Html.HiddenFor(model => model.MainRouteId)

        <div class="row">
            <div class="col-xs-6">
                <div class="form-group form-group-sm required">
                    @Html.LabelFor(model => model.MainRouteNo, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.MainRouteNo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MainRouteNo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group form-group-sm required">
                    @Html.LabelFor(model => model.MainRouteName, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.MainRouteName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MainRouteName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-xs-3">
                <div class="form-group form-group-sm">
                    @Html.LabelFor(model => model.Length, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Length, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Length, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    @Html.LabelFor(model => model.RoadClassId, null, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-6">
                        @Html.DropDownList("RoadClassId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.RoadClassId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-xs-3">
                <div class="form-group form-group-sm">
                    @Html.LabelFor(model => model.Remark, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <div class="col-md-offset-2 col-md-6">
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-save"></span> Save</button>
                <button type="reset" class="btn btn-primary"><span class="glyphicon glyphicon-refresh"></span> Reset</button>
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index")" class="btn btn-primary"><span class="glyphicon glyphicon-backward"></span> Go to Routes List</a>
</div>

<script>
    $(document).ready(function () {
        // Assign a main route id which is the next sequence in the "MainRoute" table
        $.ajax({
            url: '@Url.Action("LastMainRouteId", "Routes",  new { area = "Admin" })',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                $.each(data, function (i, item) {
                    $('#MainRouteId').val(item.MainRouteId); // set the main route id
                });
            },
        });
    });
</script>