@model IEnumerable<ERA_BMS.ViewModels.BridgeValueViewModel>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">Bridge Current Value (District: <b>@ViewBag.District</b>, Section: <b>@ViewBag.Section</b>, Segment: <b>@ViewBag.Segment</b>)</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-responsive display compact hover" id="bridge">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Bridge.BridgeId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bridge.BridgeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CurrentValue.ConstructionYear)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CurrentValue.OriginalCost)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CurrentValue.RC)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CurrentValue.ServiceYear)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CurrentValue.DOC)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CurrentValue.CV)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridge.BridgeId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bridge.BridgeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CurrentValue.ConstructionYear)
                        </td>
                        <td>
                            @item.CurrentValue.OriginalCost.Value.ToString("#,0.00")
                        </td>
                        <td>
                            @item.CurrentValue.RC.Value.ToString("#,0.00")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CurrentValue.ServiceYear)
                        </td>
                        <td>
                            @item.CurrentValue.DOC.Value.ToString("#,0.00")
                        </td>
                        <td>
                            @item.CurrentValue.CV.Value.ToString("#,0.00")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of Bridges: <strong>@Model.Count()</strong></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#bridge').dataTable({
            paging: true,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            searching: true,
            select: true,
            dom: 'lBfrtip',
            //buttons: ['copy', 'excel', 'pdf', 'print']
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        });
    });
</script>
