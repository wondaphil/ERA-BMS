@model IEnumerable<ERA_BMS.Models.BridgeValuePerLm>

<hr />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">Bridge Value Per Lm</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-responsive display compact hover" id="tblBridgeValuePerLm">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DistrictName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BridgeQuantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalBridgeLength)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BridgeValuePerLM1)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DistrictName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BridgeQuantity)
                        </td>
                        <td>
                            @item.TotalBridgeLength.Value.ToString("#,0.00")
                        </td>
                        <td>
                            @item.BridgeValuePerLM1.Value.ToString("#,0.00")
                        </td>
                    </tr>
                }
                <tr>
                    <td><b>TOTAL</b></td>
                    <td><h5><b>@Model.Sum(b => b.BridgeQuantity).Value.ToString("#,0")</b></h5></td>
                    <td><h5><b>@Model.Sum(b => b.TotalBridgeLength).Value.ToString("#,0.00")</b></h5></td>
                    <td><h5>AVG = <b>@Model.Average(b => b.BridgeValuePerLM1).Value.ToString("#,0.00")</b></h5></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of Districts: <b>@Model.Count()</b></h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#tblBridgeValuePerLm').dataTable({
            paging: false,
            bLengthChange: true,
            scrollY: 400,
            
            searching: true,
            select: true,
            dom: 'lBfrtip',
            //buttons: ['copy', 'excel', 'pdf', 'print']
            buttons: [
                { extend: 'copy', className: 'btn btn-sm btn-primary' },
                { extend: 'excel', className: 'btn btn-sm btn-primary', text: 'Export Excel' },
                { extend: 'pdf', className: 'btn btn-sm btn-primary', text: 'Export PDF' },
                { extend: 'print', className: 'btn btn-sm btn-primary' }
            ]
        });
    });
</script>