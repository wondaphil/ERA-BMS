@model IEnumerable<ERA_BMS.Models.AbutmentType>

@{
    ViewBag.Title = "Abutment Types";
    //WebGrid myGrid = new WebGrid(source: Model);
}

<h2>Abutment Types</h2>

<p>
    @*@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary glyphicon glyphicon-plus" })*@
    <a href="@Url.Action("New")" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Register New</a>
</p>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">List of Abutment Types</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-responsive display compact hover" id="abutmenttypes">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AbutmentTypeId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AbutmentTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Remark)
                    </th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AbutmentTypeId)
                        </td>
                        <td>
                            @Html.ActionLink(@Html.DisplayFor(modelItem => item.AbutmentTypeName).ToString(), "Details", new { id = item.AbutmentTypeId })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remark)
                        </td>
                        <td>
                            <!-- with Tooltips -->
                            @Html.ActionLink(" ", "Edit", new { id = item.AbutmentTypeId }, new { @class = "glyphicon glyphicon-edit", @data_toggle = "tooltip", title = "Edit" })
                        </td>
                        <td>
                            @Html.ActionLink(" ", "Delete", new { id = item.AbutmentTypeId }, new { @class = "glyphicon glyphicon-trash", @data_toggle = "tooltip", title = "Delete" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">Total No. of Abutment Types: <b>@Model.Count()</b></h3>
    </div>
</div>

